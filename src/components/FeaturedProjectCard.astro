---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Project = CollectionEntry<"projects">["data"] & { slug: "string"; order?: number };

const { title, image, imageAlt, tags, description, slug, order } =
    Astro.props as Project;
---

<a
    class="block no-underline text-inherit transition-all duration-300 ease-in-out group"
    href={`/projects/${slug}`}
>
    <article
        class={`flex flex-col gap-8 bg-white rounded-2xl overflow-hidden border border-gray-200 shadow-sm transition-all duration-300 ease-in-out hover:border-gray-300 hover:shadow-lg hover:-translate-y-1 md:flex-row md:gap-10 ${order && order % 2 === 0 ? 'lg:flex-row-reverse' : ''}`}
    >
        <div
            class="w-full max-h-[600px] overflow-hidden py-8 px-6 md:flex-1 md:min-h-[300px]"
        >
            <Image
                src={image}
                alt={imageAlt ?? title}
                class="project-image w-full h-full object-contain aspect-[4/3] transition-transform duration-500 ease-in-out group-hover:scale-[1.05] md:h-full md:aspect-auto"
                loading="eager"
                decoding="async"
                format="webp"
                quality="mid"
            />
        </div>
        <div
            class="p-8 flex flex-col gap-6 md:flex-1 md:p-10 md:justify-center lg:p-12 lg:gap-8"
        >
            <div class="flex flex-col gap-5">
                <h3
                    class="text-2xl font-light text-gray-900 m-0 leading-snug tracking-tight md:text-3xl lg:text-4xl"
                >
                    {title}
                </h3>
                <div class="flex flex-wrap gap-2">
                    {
                        tags.map((tag, index) => (
                            <span class={`text-sm font-medium py-2 px-3 rounded-full transition-colors ${
                                index === 0 
                                    ? "text-accent-700 bg-accent-100" 
                                    : "text-gray-600 bg-gray-100 hover:bg-gray-200"
                            }`}>
                                {tag}
                            </span>
                        ))
                    }
                </div>
            </div>
            <p
                class="text-lg font-light leading-relaxed text-gray-600 m-0 md:text-xl"
            >
                {description}
            </p>
            <div class="inline-flex items-center gap-2 text-accent-600 font-medium hover:text-accent-700 transition-colors group/link">
                <span class="text-sm tracking-wide uppercase">
                    View Project
                </span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover/link:translate-x-1">
                    <path d="M5 12h14"/>
                    <path d="m12 5 7 7-7 7"/>
                </svg>
            </div>
        </div>
    </article>
</a>
