---
const projects = [
    {
        title: "Chat App Homepage",
        tags: ["Website Design", "Webflow Development", "Concept"],
        description:
            "This is a homepage design and build for a concept project - a chat application. I designed the page first, then built a responsive web page using Webflow.",
        imageUrl: "/img/chat-app.webp",
        projectUrl: "#",
    },
    {
        title: "Team App Figma Design",
        tags: ["Website Design", "Figma", "Concept"],
        description:
            "Website design for a concept team collaboration platform. This design also includes a beautiful blog.",
        imageUrl: "/img/team-app.webp",
        projectUrl: "#",
    },
];
---

<section id="featured-projects" class="featured-projects-section">
    <div class="container section-padding-block featured-projects-container">
        <h2>Featured Projects</h2>

        <div class="projects-grid">
            {
                projects.map((project) => (
                    <article class="project-card">
                        <img
                            src={project.imageUrl}
                            alt={`${project.title} screenshot`}
                            class="project-image"
                            loading="lazy"
                            width="600"
                            height="400"
                        />
                        <div class="project-content">
                            <div class="project-tags">
                                {project.tags.map((tag) => (
                                    <span class="tag">{tag}</span>
                                ))}
                            </div>
                            <h3>{project.title}</h3>
                            <p class="project-description text-body-small">
                                {project.description}
                            </p>
                            <a
                                href={project.projectUrl}
                                class="btn text-caption project-link"
                            >
                                View Project &rarr;
                            </a>
                        </div>
                    </article>
                ))
            }
        </div>

        <div class="view-all-projects-container">
            <a href="#" class="btn btn-secondary view-all-projects-btn"
                >View All Projects</a
            >
        </div>
    </div>
</section>

<style>
    .featured-projects-section {
        background-color: var(--primary-500);
        color: var(--secondary-500);
    }

    .projects-grid {
        display: grid;
        gap: var(--section-gap);
    }

    .project-card {
        display: flex;
        flex-direction: column;
    }

    .project-image {
        width: 100%;
        height: auto;
        object-fit: cover;
        display: block;
    }

    .project-content {
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 12px; /* Spacing between content elements */
        flex-grow: 1; /* Allow content to fill space */
    }

    .project-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 4px; /* Small space before title */
    }

    .project-description {
        flex-grow: 1; /* Push button to bottom */
        margin-bottom: 12px; /* Space before button */
    }

    .project-link {
        align-self: flex-start; /* Align button to the left */
        background-color: transparent; /* Override default btn background */
        padding-inline: 0; /* Remove default btn padding */
        padding-block: 0;
        color: var(--secondary-500); /* Ensure link text is visible */
        border-radius: 0; /* Remove button border-radius */
        text-transform: uppercase; /* Match design */
    }

    .project-link:hover,
    .project-link:focus-visible {
        transform: none; /* Disable btn hover effect */
        box-shadow: none;
        filter: brightness(1.2); /* Slight brightness on hover */
        text-decoration: underline;
    }
    .project-link:active {
        transform: none;
        box-shadow: none;
        filter: brightness(0.9);
    }

    .view-all-projects-container {
        margin-top: 1rem;
        /* text-align: center; */
    }

    @media (min-width: 768px) {
        .featured-projects-container h2 {
            text-align: left; /* Align heading left on tablet+ */
        }
        .projects-grid {
            grid-template-columns: repeat(2, 1fr); /* 2 columns on tablet */
            gap: 3.75rem;
        }
        .view-all-projects-container {
            margin-top: 3.75rem;
            text-align: left; /* Align button left on tablet+ */
        }
    }

    @media (min-width: 1280px) {
        .projects-grid {
            grid-template-columns: 1fr;
            gap: 6.25rem;
        }
        .project-card {
            display: grid; /* Switch to grid layout for desktop */
            grid-template-columns: 1fr 1fr; /* Image and content side-by-side */
            gap: 30px;
            align-items: center; /* Vertically center content with image */
        }
        .project-card:nth-child(even) {
            grid-template-columns: 1fr 1fr; /* Keep order for now, can reverse if needed */
        }
        .project-card:nth-child(even) .project-image {
            order: 1; /* Move image to the right for even cards */
        }
        .project-image {
            aspect-ratio: auto; /* Let height be determined by content */
            height: 100%; /* Fill card height */
        }
        .project-content {
            gap: 16px;
        }
        .project-description {
            margin-bottom: 16px;
        }
        .view-all-projects-container {
            margin-top: 6.25rem;
        }
    }
</style>
