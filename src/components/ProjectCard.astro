---
// src/components/ProjectCard.astro
interface Props {
    title: string;
    imageUrl: string;
    imageAlt: string;
    tags: string[];
    description: string;
    projectUrl: string;
}

const { title, imageUrl, imageAlt, tags, description, projectUrl } =
    Astro.props;
---

<div class="project-card">
    <img
        src={imageUrl}
        alt={imageAlt}
        class="project-card__image"
        loading="lazy"
    />
    <div class="project-card__content">
        <div class="project-card__header">
            <h3 class="project-card__title">{title}</h3>
            <div class="project-card__tags">
                {tags.map((tag) => <span class="tag tag-outline">{tag}</span>)}
            </div>
        </div>
        <p class="project-card__description">{description}</p>
        <a href={projectUrl} class="project-card__link">
            VIEW PROJECT <span aria-hidden="true">&rarr;</span>
        </a>
    </div>
</div>

<style>
    .project-card {
        background-color: var(--color-surface);
        border-radius: var(--border-radius);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        gap: 16px;
        box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
        border: 1px solid var(--blue-100);
        padding: 0.75rem;
    }

    .project-card__image {
        width: 100%;
        height: auto;
        object-fit: cover;
        display: block;
    }

    .project-card__content {
        padding: var(--space-m);
        display: flex;
        flex-direction: column;
        gap: 2rem;
        flex-grow: 1;
    }

    .project-card__title {
        margin-bottom: 4px;
    }

    .project-card__tags {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
    }

    .project-card__description {
        flex-grow: 1; /* Push link to the bottom */
    }

    .project-card__link {
        font-size: var(--font-size-sm);
        font-weight: var(--font-weight-bold);
        color: var(--color-primary);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: var(--space-3xs);
        transition: color 0.3s ease;
        align-self: flex-start; /* Align link to the start */
    }

    .project-card__link:hover {
        color: var(--color-primary-dark);
        text-decoration: underline;
    }

    .project-card__link span {
        transition: transform 0.3s ease;
    }

    .project-card__link:hover span {
        transform: translateX(4px);
    }

    @media (min-width: 768px) {
        .project-card__title {
            margin-bottom: 8px;
        }
        .project-card__tags {
            gap: 8px;
        }

        .project-card {
            gap: 2rem;
            padding: 1.25rem;
        }
    }

    @media (min-width: 1280) {
        .project-card__title {
            margin-bottom: 12px;
        }
        .project-card__tags {
            gap: 12px;
        }

        .project-card {
            padding: 2.5rem;
        }
    }
</style>
