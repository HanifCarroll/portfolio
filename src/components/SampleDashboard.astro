---
const { compact = false } = Astro.props;
const barWidth = compact ? "w-3" : "w-4";
const barHeight = compact ? "h-20" : "h-24";
const lineHeight = compact ? "h-20" : "h-24";
---

<div class="tech-card p-8">
    <div class="flex items-center justify-between">
        <span class="font-mono text-xs uppercase tracking-wider text-zinc-500 dark:text-zinc-300">
            Sample dashboard
        </span>
        <span class="text-xs text-zinc-500 dark:text-zinc-300">Not client data</span>
    </div>

    <div class="mt-4 grid grid-cols-3 gap-3">
        <div class="border-2 border-black dark:border-white p-3">
            <p class="text-xs text-zinc-500">Sessions</p>
            <p class="text-lg font-bold">124,980</p>
            <p class="text-xs text-zinc-500">+12% WoW</p>
        </div>
        <div class="border-2 border-black dark:border-white p-3">
            <p class="text-xs text-zinc-500">Leads</p>
            <p class="text-lg font-bold">1,248</p>
            <p class="text-xs text-zinc-500">+8% WoW</p>
        </div>
        <div class="border-2 border-black dark:border-white p-3">
            <p class="text-xs text-zinc-500">ROAS</p>
            <p class="text-lg font-bold">3.7x</p>
            <p class="text-xs text-zinc-500">Target 3.5x</p>
        </div>
    </div>

    <div class="mt-4 grid gap-3 lg:grid-cols-2">
        <div class="border-2 border-black/30 dark:border-white/30 bg-white/60 dark:bg-black/40 p-3">
            <p class="text-xs font-mono uppercase text-zinc-500 dark:text-zinc-300">Weekly sessions</p>
            <div class={`mt-3 flex items-end gap-2 ${barHeight}`}>
                <div class={`${barWidth} bg-primary`} style="height: 30%;"></div>
                <div class={`${barWidth} bg-primary`} style="height: 55%;"></div>
                <div class={`${barWidth} bg-primary`} style="height: 42%;"></div>
                <div class={`${barWidth} bg-primary`} style="height: 70%;"></div>
                <div class={`${barWidth} bg-primary`} style="height: 62%;"></div>
                <div class={`${barWidth} bg-primary`} style="height: 85%;"></div>
                <div class={`${barWidth} bg-primary`} style="height: 68%;"></div>
                <div class={`${barWidth} bg-primary`} style="height: 92%;"></div>
                <div class={`${barWidth} bg-primary`} style="height: 74%;"></div>
                <div class={`${barWidth} bg-primary`} style="height: 88%;"></div>
            </div>
            <div class="mt-2 h-1 bg-black/10 dark:bg-white/10"></div>
        </div>

        <div class="border-2 border-black/30 dark:border-white/30 bg-white/60 dark:bg-black/40 p-3">
            <p class="text-xs font-mono uppercase text-zinc-500 dark:text-zinc-300">Conversion rate</p>
            <div class={`mt-3 ${lineHeight} border border-black/20 dark:border-white/20 bg-white/40 dark:bg-black/30 relative`}>
                <svg viewBox="0 0 300 60" class="w-full h-full">
                    <polyline
                        points="0,45 30,38 60,42 90,30 120,34 150,22 180,28 210,18 240,24 270,16 300,20"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        class="text-primary"
                    />
                    <line x1="0" y1="50" x2="300" y2="50" stroke="currentColor" stroke-width="1" class="text-black/20 dark:text-white/20" />
                </svg>
            </div>
            <div class="mt-2 h-1 bg-black/10 dark:bg-white/10"></div>
        </div>
    </div>

    <div class="mt-4 grid grid-cols-2 gap-3 text-xs text-zinc-600 dark:text-zinc-300">
        <div class="border-2 border-black/20 dark:border-white/20 p-3">
            <p class="font-mono uppercase">Top Channels</p>
            <p class="mt-2">Paid Search · 46%</p>
            <p>Organic · 32%</p>
            <p>Social · 22%</p>
        </div>
        <div class="border-2 border-black/20 dark:border-white/20 p-3">
            <p class="font-mono uppercase">Alerts</p>
            <p class="mt-2">Spend spike: +18%</p>
            <p>Conversion dip: -6%</p>
            <p>Traffic drop: -9%</p>
        </div>
    </div>
</div>
