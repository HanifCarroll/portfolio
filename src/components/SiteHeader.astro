---
const { url } = Astro;
---

<header class="site-header">
    <div class="container nav-container">
        <a href="/" class="logo">
            <img src="/img/avatar.png" alt="Hanif smiling" /><span
                >Hanif Carroll</span
            >
        </a>
        <nav class="site-nav" id="main-nav" aria-label="Main Navigation">
            <ul>
                <li>
                    <a href="/" class={url.pathname === "/" ? "active" : ""}
                        >Home</a
                    >
                </li>
                <!-- <li>
                    <a
                        href="/about"
                        class={url.pathname.startsWith("/about")
                            ? "active"
                            : ""}>About</a
                    >
                </li> -->
                <li>
                    <a
                        href="/now/"
                        class={url.pathname === "/now/" ? "active" : ""}>Now</a
                    >
                </li>
                <li><a href="#contact" class="btn cta">Contact</a></li>
            </ul>
        </nav>
        <button
            class="mobile-toggle"
            id="mobile-nav-toggle"
            aria-label="Toggle Navigation"
            aria-expanded="false"
            aria-controls="main-nav"
        >
            <span class="visually-hidden">Menu</span>
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </button>
    </div>
</header>

<style>
    .site-header {
        padding-block: 1rem;
        position: relative;
    }

    .nav-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .logo {
        display: flex;
        gap: 12px;
        align-items: center;
        font-weight: 600;
        text-decoration: none;
        z-index: 1001;
    }

    .site-nav {
        border-radius: var(--border-radius);
    }

    .site-nav ul {
        display: flex;
        list-style: none;
        gap: 1.5rem;
        margin: 0;
        padding: 0;
    }

    .site-nav a {
        font-weight: 500;
        text-decoration: none;
        transition:
            border-color 0.2s,
            color 0.2s;
        border-bottom: 3px solid transparent;
    }
    .site-nav a.active {
        font-weight: 700;
        color: var(--primary-500);
    }
    .site-nav a.cta:hover {
        text-decoration: none;
        border-bottom: 3px solid var(--primary-500);
    }

    .mobile-toggle {
        display: none;
        background: none;
        border: none;
        padding: 0.5rem;
        cursor: pointer;
        z-index: 1001;
    }

    .hamburger-box {
        display: inline-block;
        position: relative;
        width: 24px;
        height: 18px;
    }
    .hamburger-inner,
    .hamburger-inner::before,
    .hamburger-inner::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 2px;
        background-color: var(--primary-500);
        border-radius: 2px;
        left: 0;
        transition:
            transform 0.2s ease-in-out,
            top 0.2s ease-in-out,
            opacity 0.2s ease-in-out;
    }
    .hamburger-inner {
        top: 50%;
        transform: translateY(-50%);
    }
    .hamburger-inner::before {
        top: -8px;
    }
    .hamburger-inner::after {
        top: 8px;
    }

    .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    /* Mobile-first styles */
    .site-nav {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background-color: #fff;
        border-bottom: 1px solid #eee;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 1rem;
        z-index: 1000;
    }

    .site-nav.is-open {
        display: block; /* Show when toggled */
    }

    .site-nav ul {
        flex-direction: column;
        gap: 1rem;
        align-items: center;
    }
    .site-nav li {
        width: 100%;
        text-align: center;
        display: flex;
    }
    .site-nav a {
        width: 100%;
    }

    .mobile-toggle {
        display: block;
    }

    /* Hamburger animation when open */
    .mobile-toggle[aria-expanded="true"] .hamburger-inner {
        background-color: transparent; /* Middle line disappears */
    }
    .mobile-toggle[aria-expanded="true"] .hamburger-inner::before {
        top: 0;
        transform: rotate(45deg);
    }
    .mobile-toggle[aria-expanded="true"] .hamburger-inner::after {
        top: 0;
        transform: rotate(-45deg);
    }

    @media (max-width: 768px) {
        .site-nav a:not(.active):hover {
            font-weight: 600;
        }
    }

    @media (min-width: 768px) {
        .site-nav {
            display: block;
            position: static;
            background: none;
            border: none;
            box-shadow: none;
            padding: 0;
        }
        .site-nav ul {
            flex-direction: row;
            gap: 3rem;
            align-items: center;
        }
        .site-nav li {
            width: auto;
            text-align: left;
        }

        .site-nav a.active,
        .site-nav a:hover {
            border-bottom: 3px solid var(--primary-500);
        }

        .mobile-toggle {
            display: none;
        }
    }
</style>

<script>
    const toggleButton = document.getElementById("mobile-nav-toggle");
    const mainNav = document.getElementById("main-nav");

    if (toggleButton && mainNav) {
        toggleButton.addEventListener("click", () => {
            const isOpen = mainNav.classList.toggle("is-open");
            toggleButton.setAttribute("aria-expanded", isOpen.toString());
        });
    }
</script>
