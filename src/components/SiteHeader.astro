---
const { url } = Astro;
---

<header class="site-header">
    <div class="container nav-container">
        <a href="/" class="logo">
            <img src="/img/avatar.png" alt="Hanif smiling" />
            <span class="logo-text">Hanif Carroll</span>
        </a>
        <nav class="site-nav" id="main-nav" aria-label="Main Navigation">
            <ul class="nav-list">
                <li class="nav-item">
                    <a
                        href="/"
                        class={`nav-link ${url.pathname === "/" ? "active" : ""}`}
                    >
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a
                        href="/consulting"
                        class={`nav-link ${url.pathname === "/consulting" ? "active" : ""}`}
                    >
                        Consulting
                    </a>
                </li>
                <li class="nav-item">
                    <a
                        href="/about"
                        class={`nav-link ${url.pathname.startsWith("/about") ? "active" : ""}`}
                    >
                        About
                    </a>
                </li>
                <li class="nav-item">
                    <a
                        href="/now/"
                        class={`nav-link ${url.pathname === "/now/" ? "active" : ""}`}
                    >
                        Now
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#contact" class="nav-link contact-link"
                        >Let's Work Together</a
                    >
                </li>
            </ul>
        </nav>
        <button
            class="mobile-toggle"
            id="mobile-nav-toggle"
            aria-label="Toggle Navigation"
            aria-expanded="false"
            aria-controls="main-nav"
        >
            <span class="visually-hidden">Menu</span>
            <span class="hamburger-lines">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </span>
        </button>
    </div>
</header>

<style>
    .site-header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background-color: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border-bottom: 1px solid #e5e5e5;
        transition: all 0.2s ease;
    }

    .nav-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 16px 24px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: #1a1a1a;
        font-weight: 500;
        font-size: 1rem;
        z-index: 1001;
        transition: opacity 0.2s ease;
    }

    .logo:hover {
        opacity: 0.8;
    }

    .logo img {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        object-fit: cover;
    }

    .logo-text {
        font-weight: 500;
        color: #1a1a1a;
        letter-spacing: 0.01em;
    }

    .nav-list {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        gap: 32px;
    }

    .nav-item {
        display: flex;
    }

    .nav-link {
        font-size: 0.95rem;
        font-weight: 400;
        color: #666;
        text-decoration: none;
        padding: 8px 0;
        position: relative;
        transition: color 0.2s ease;
        letter-spacing: 0.01em;
    }

    .nav-link:hover {
        color: #2c2c2c;
    }

    .nav-link.active {
        color: #2c2c2c;
        font-weight: 500;
    }

    .nav-link.active::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: var(--accent-500);
    }

    .contact-link {
        background-color: #2c2c2c;
        color: #ffffff !important;
        padding: 10px 20px;
        border-radius: 2px;
        font-weight: 500;
        transition: all 0.2s ease;
        margin-left: 16px;
    }

    .contact-link:hover {
        background-color: #1a1a1a;
        color: #ffffff !important;
    }

    .mobile-toggle {
        display: none;
        background: none;
        border: none;
        padding: 8px;
        cursor: pointer;
        z-index: 1001;
    }

    .hamburger-lines {
        display: flex;
        flex-direction: column;
        width: 20px;
        height: 16px;
        justify-content: space-between;
    }

    .hamburger-line {
        width: 100%;
        height: 2px;
        background-color: #2c2c2c;
        transition: all 0.2s ease;
        border-radius: 1px;
    }

    .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    /* Mobile Navigation */
    @media (max-width: 767px) {
        .site-nav {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background-color: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border-bottom: 1px solid #e5e5e5;
            padding: 24px;
            z-index: 1000;
        }

        .site-nav.is-open {
            display: block;
        }

        .nav-list {
            flex-direction: column;
            gap: 20px;
            align-items: center;
        }

        .nav-item {
            width: 100%;
            justify-content: center;
        }

        .nav-link {
            font-size: 1rem;
        }

        .contact-link {
            margin-left: 0;
            margin-top: 8px;
        }

        .mobile-toggle {
            display: block;
        }

        /* Hamburger animation when open */
        .mobile-toggle[aria-expanded="true"] .hamburger-line:nth-child(1) {
            transform: translateY(7px) rotate(45deg);
        }

        .mobile-toggle[aria-expanded="true"] .hamburger-line:nth-child(2) {
            opacity: 0;
        }

        .mobile-toggle[aria-expanded="true"] .hamburger-line:nth-child(3) {
            transform: translateY(-7px) rotate(-45deg);
        }
    }

    @media (min-width: 768px) {
        .nav-container {
            padding: 20px 24px;
        }

        .logo {
            font-size: 1.1rem;
        }

        .logo img {
            width: 36px;
            height: 36px;
        }

        .nav-list {
            gap: 40px;
        }

        .nav-link {
            font-size: 1rem;
        }

        .site-nav {
            display: block !important;
            position: static;
            background: none;
            border: none;
            padding: 0;
        }

        .mobile-toggle {
            display: none;
        }
    }
</style>

<script>
    const toggleButton = document.getElementById("mobile-nav-toggle");
    const mainNav = document.getElementById("main-nav");

    if (toggleButton && mainNav) {
        toggleButton.addEventListener("click", () => {
            const isOpen = mainNav.classList.toggle("is-open");
            toggleButton.setAttribute("aria-expanded", isOpen.toString());
        });
    }
</script>
