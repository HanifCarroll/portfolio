<section class="process-section">
    <div class="container section-padding-block process-container">
        <h2>My Product Engineering Process</h2>
        <div class="process-tabs">
            <nav aria-label="Tabs" id="process-tabs-nav">
                <button
                    data-target="#research-panel"
                    class="tab-button tab-active"
                    aria-current="page"
                >
                    Research
                </button>
                <button data-target="#design-panel" class="tab-button">
                    Strategy
                </button>
                <button data-target="#implementation-panel" class="tab-button">
                    Build
                </button>
            </nav>

            <div id="process-tab-content" class="">
                <div id="research-panel" class="tab-panel">
                    <ol class="process-steps">
                        <li>
                            <span class="text-h5">1</span>
                            <div>
                                <span class="text-bold"
                                    >User Research & Problem Definition:</span
                                >
                                I conduct user interviews, analyze behavioral data,
                                and identify core user problems to solve. This ensures
                                we build features people actually need.
                            </div>
                        </li>
                        <li>
                            <span class="text-h5">2</span>
                            <div>
                                <span class="text-bold"
                                    >Market Analysis & Competitive Research:</span
                                >
                                I study how existing products address similar problems,
                                identifying opportunities for innovation and better
                                user experiences.
                            </div>
                        </li>
                        <li>
                            <span class="text-h5">3</span>
                            <div>
                                <span class="text-bold">Problem Validation</span
                                >
                                I validate that the problems we've identified are
                                worth solving through additional user feedback and
                                market research.
                            </div>
                        </li>
                    </ol>
                </div>
                <div id="design-panel" class="tab-panel hidden">
                    <ol class="process-steps">
                        <li>
                            <span class="text-h5">1</span>
                            <div>
                                <span class="text-bold"
                                    >Product Strategy & Roadmapping:</span
                                >
                                I translate user insights into product strategy,
                                defining what to build first and how features connect
                                to business goals.
                            </div>
                        </li>
                        <li>
                            <span class="text-h5">2</span>
                            <div>
                                <span class="text-bold"
                                    >Technical Architecture Planning:</span
                                >
                                I plan the technical implementation approach, ensuring
                                scalability, performance, and maintainability from
                                day one.
                            </div>
                        </li>
                        <li>
                            <span class="text-h5">3</span>
                            <div>
                                <span class="text-bold"
                                    >MVP Scoping & Prioritization:</span
                                >
                                I determine the minimum viable feature set that solves
                                the core user problem while enabling rapid testing
                                and iteration.
                            </div>
                        </li>
                    </ol>
                </div>
                <div id="implementation-panel" class="tab-panel hidden">
                    <ol class="process-steps">
                        <li>
                            <span class="text-h5">1</span>
                            <div>
                                <span class="text-bold">Rapid Prototyping:</span
                                >
                                I build functional prototypes with real interactions
                                and logic, enabling immediate user testing and validation
                                before full development.
                            </div>
                        </li>
                        <li>
                            <span class="text-h5">2</span>
                            <div>
                                <span class="text-bold"
                                    >Full-Stack Implementation:</span
                                >
                                I develop complete features from frontend interfaces
                                to backend logic, maintaining product vision throughout
                                the technical build.
                            </div>
                        </li>
                        <li>
                            <span class="text-h5">3</span>
                            <div>
                                <span class="text-bold"
                                    >User Testing & Iteration:</span
                                >
                                I continuously gather user feedback on working features,
                                making data-driven improvements to optimize the product
                                experience.
                            </div>
                        </li>
                        <li>
                            <span class="text-h5">4</span>
                            <div>
                                <span class="text-bold"
                                    >Performance & Scale Optimization:</span
                                >
                                I ensure fast, reliable experiences that can grow
                                with the user base and business needs.
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .tab-break {
        display: block;
    }
    .process-tabs nav {
        display: flex;
        gap: 24px;
        border-bottom: 1px solid var(--secondary-600);
        margin-bottom: 20px;
    }
    .process-tabs .tab-button {
        white-space: nowrap;
        padding: 12px 4px;
        border-bottom: 2px solid transparent;
        color: var(--primary-300);
        font-weight: 500;
        font-size: 1rem;
        background: none;
        border-top: none;
        border-left: none;
        border-right: none;
        cursor: pointer;
        text-align: center;
        transition:
            border-color 0.2s,
            color 0.2s;
    }
    .process-tabs .tab-button:hover {
        color: var(--primary-500);
        border-bottom-color: var(--primary-200);
    }
    .process-tabs .tab-button.tab-active {
        border-bottom-color: var(--primary-500);
        color: var(--primary-500);
        font-weight: 600;
    }
    .process-tabs .tab-button.tab-active:hover {
        border-bottom-color: var(--primary-500);
        color: var(--primary-500);
    }
    .tab-panel {
        padding: 16px 0;
    }
    .process-steps {
        display: flex;
        flex-direction: column;
        gap: 20px;
        list-style: none;
    }
    .process-steps li {
        display: flex;
        align-items: center;
        gap: 20px;
        line-height: 1.6;
        margin-bottom: 12px;
    }
    @media (min-width: 768px) {
        .tab-break {
            display: inline;
        }
        .process-tabs .tab-button {
            font-size: 1.25rem;
        }
        .process-steps {
            gap: 40px;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const processTabsNav = document.getElementById("process-tabs-nav");
        const processTabContent = document.getElementById(
            "process-tab-content"
        );
        if (processTabsNav && processTabContent) {
            const processTabButtons =
                processTabsNav.querySelectorAll(".tab-button");
            const processTabPanels =
                processTabContent.querySelectorAll(".tab-panel");
            processTabButtons.forEach((button) => {
                button.addEventListener("click", () => {
                    const targetPanelId = button.getAttribute("data-target");
                    if (targetPanelId) {
                        const targetPanel =
                            processTabContent.querySelector(targetPanelId);
                        processTabButtons.forEach((btn) => {
                            btn.classList.remove("tab-active");
                            btn.removeAttribute("aria-current");
                        });
                        processTabPanels.forEach((panel) => {
                            panel.classList.add("hidden");
                        });
                        button.classList.add("tab-active");
                        button.setAttribute("aria-current", "page");
                        if (targetPanel) {
                            targetPanel.classList.remove("hidden");
                        } else {
                            console.error(
                                `Target panel with ID "${targetPanelId}" not found.`
                            );
                        }
                    } else {
                        console.error(
                            "Clicked tab button does not have a 'data-target' attribute."
                        );
                    }
                });
            });
        } else {
            console.error(
                "Process tabs navigation or content area not found. Elements with IDs 'process-tabs-nav' and 'process-tab-content' must exist."
            );
        }
    });
</script>
