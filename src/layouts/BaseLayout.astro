---
import BaseHead from "./components/BaseHead.astro";
import Header from "./components/Header.astro";

const { title, description, image } = Astro.props;

const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <BaseHead title={title} description={description} image={image} />
    </head>
    <body class="font-sans">
        <Header />
        <div class="py-12 min-h-[calc(100vh-200px)]">
            <slot />
        </div>
        <footer
            id="contact"
            class="border-t-2 border-black dark:border-white"
        >
            <div class="container py-20">
                <!-- Main Footer Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-8">
                    <!-- Left Column: CTA Content -->
                    <div class="lg:col-span-7 space-y-8">
                        <span class="section-label">// Contact</span>

                        <h2 class="heading-display text-4xl md:text-5xl lg:text-6xl">
                            Let's Build<br />Something Great
                        </h2>

                        <p class="text-lg text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-xl">
                            Whether you need a full-time engineer or a freelance
                            partner for your next project, let's talk about what
                            you're building.
                        </p>

                        <div class="flex flex-wrap gap-4 pt-2">
                            <a
                                class="btn-primary"
                                href="mailto:HanifCarroll@gmail.com"
                            >
                                Initiate Contact
                                <span>&rarr;</span>
                            </a>
                            <a
                                class="btn-secondary"
                                href="/Hanif_Carroll_Fullstack_Product_Engineer.pdf"
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                Download Resume
                            </a>
                        </div>
                    </div>

                    <!-- Right Column: Connect Links -->
                    <div class="lg:col-span-5 lg:flex lg:flex-col lg:items-end lg:justify-end">
                        <div class="space-y-6">
                            <span class="section-label block lg:text-right">// Connect</span>
                            <nav class="flex flex-col gap-3">
                                <a
                                    class="group flex items-center gap-3 font-mono text-sm uppercase tracking-wide transition-colors hover:text-primary lg:justify-end"
                                    href="https://linkedin.com/in/hanifcarroll"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <span class="h-px w-6 bg-zinc-300 dark:bg-zinc-700 transition-all group-hover:w-10 group-hover:bg-primary"></span>
                                    LinkedIn
                                </a>
                                <a
                                    class="group flex items-center gap-3 font-mono text-sm uppercase tracking-wide transition-colors hover:text-primary lg:justify-end"
                                    href="https://github.com/hanifcarroll"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <span class="h-px w-6 bg-zinc-300 dark:bg-zinc-700 transition-all group-hover:w-10 group-hover:bg-primary"></span>
                                    GitHub
                                </a>
                                <a
                                    class="group flex items-center gap-3 font-mono text-sm uppercase tracking-wide transition-colors hover:text-primary lg:justify-end"
                                    href="https://x.com/hanifcarroll"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <span class="h-px w-6 bg-zinc-300 dark:bg-zinc-700 transition-all group-hover:w-10 group-hover:bg-primary"></span>
                                    X / Twitter
                                </a>
                                <a
                                    class="group flex items-center gap-3 font-mono text-sm uppercase tracking-wide transition-colors hover:text-primary lg:justify-end"
                                    href="mailto:HanifCarroll@gmail.com"
                                >
                                    <span class="h-px w-6 bg-zinc-300 dark:bg-zinc-700 transition-all group-hover:w-10 group-hover:bg-primary"></span>
                                    Email
                                </a>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- Divider -->
                <div class="grid-line-horizontal my-12"></div>

                <!-- Bottom row -->
                <div class="font-mono text-sm text-zinc-500 dark:text-zinc-400">
                    &copy; {currentYear} HANIF CARROLL
                </div>
            </div>
        </footer>
    </body>
</html>
