---
import BaseHead from "./components/BaseHead.astro";
import Header from "./components/Header.astro";

const { title, description, image } = Astro.props;

const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <BaseHead title={title} description={description} image={image} />
    </head>
    <body class="font-sans">
        <Header />
        <div class="py-12 min-h-[calc(100vh-200px)]">
            <slot />
        </div>
        <footer
            id="contact"
            class="relative border-t border-zinc-200/50 py-20 dark:border-zinc-800/50"
        >
            <!-- Warm gradient background -->
            <div class="absolute inset-0 gradient-warm opacity-50"></div>

            <div class="container relative z-10 space-y-16">
                <section class="mx-auto max-w-2xl space-y-8 text-center">
                    <span class="inline-block px-4 py-1.5 text-xs font-semibold uppercase tracking-widest text-primary bg-primary/10 rounded-full">
                        Let's Connect
                    </span>
                    <h2
                        class="font-serif text-4xl tracking-tight text-zinc-900 dark:text-zinc-100 sm:text-5xl italic"
                    >
                        Ready to build something great?
                    </h2>
                    <p
                        class="text-lg text-zinc-600 dark:text-zinc-400 leading-relaxed"
                    >
                        Whether you need a full-time engineer or a freelance
                        partner for your next project, let's talk about what
                        you're building.
                    </p>
                    <div class="flex flex-wrap justify-center gap-4 pt-4">
                        <a
                            class="group inline-flex items-center justify-center gap-2 rounded-full bg-primary px-8 py-4 text-sm font-semibold text-white transition-all hover:bg-primary-dark hover:shadow-lg hover:shadow-primary/25 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary"
                            href="mailto:HanifCarroll@gmail.com"
                        >
                            Get in Touch
                            <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                            </svg>
                        </a>
                        <a
                            class="inline-flex items-center justify-center rounded-full border-2 border-zinc-300 px-8 py-4 text-sm font-semibold text-zinc-700 transition-all hover:border-primary hover:text-primary dark:border-zinc-600 dark:text-zinc-300 dark:hover:border-primary dark:hover:text-primary"
                            href="/Hanif_Carroll_Fullstack_Product_Engineer.pdf"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            Download Resume
                        </a>
                    </div>
                </section>

                <div class="decorative-line"></div>

                <section
                    class="flex flex-col items-center justify-between gap-6 text-sm text-zinc-500 dark:text-zinc-400 md:flex-row"
                >
                    <div class="text-center md:text-left font-medium">
                        Â© {currentYear} Hanif Carroll
                    </div>
                    <div class="flex items-center gap-6">
                        <a
                            class="transition-colors hover:text-primary"
                            href="https://linkedin.com/in/hanifcarroll"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            LinkedIn
                        </a>
                        <a
                            class="transition-colors hover:text-primary"
                            href="https://x.com/hanifcarroll"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            X
                        </a>
                        <a
                            class="transition-colors hover:text-primary"
                            href="mailto:HanifCarroll@gmail.com"
                        >
                            Email
                        </a>
                    </div>
                </section>
            </div>
        </footer>
    </body>
</html>
