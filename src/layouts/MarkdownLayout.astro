---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import Head from "../components/Head.astro";
import MarkdownRenderer from "../components/MarkdownRenderer.astro";
import { SITE_TITLE_SUFFIX } from "../utils/siteConfig";

export interface Props {
    frontmatter: {
        title: string;
        description: string;
    };
}
const frontmatter = Astro.props.frontmatter || Astro.props;
let { title, description } = frontmatter;

// Automatically add suffix if not already present
if (!title.includes(SITE_TITLE_SUFFIX)) {
    const pagePrefix = title.replace(/\s*\|\s*.*$/, ""); // Remove any existing suffix
    title = `${pagePrefix} | ${SITE_TITLE_SUFFIX}`;
}
---

<!doctype html>
<html lang="en">
    <Head {title} {description} />
    <body>
        <SiteHeader />
        <main class="pt-20 md:pt-[90px]">
            <section class="py-20 px-6 md:py-[100px] lg:py-[120px]">
                <MarkdownRenderer>
                    <slot />
                </MarkdownRenderer>
            </section>
        </main>
        <SiteFooter />
    </body>
</html>
