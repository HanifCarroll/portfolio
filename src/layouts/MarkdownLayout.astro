---
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import Head from "../components/Head.astro";
import MarkdownRenderer from "../components/MarkdownRenderer.astro";
import { SITE_TITLE_SUFFIX } from "../utils/siteConfig";

export interface Props {
    frontmatter: {
        title: string;
        description: string;
    };
}
const frontmatter = Astro.props.frontmatter || Astro.props;
let { title, description } = frontmatter;

// Automatically add suffix if not already present
if (!title.includes(SITE_TITLE_SUFFIX)) {
    const pagePrefix = title.replace(/\s*\|\s*.*$/, ''); // Remove any existing suffix
    title = `${pagePrefix} | ${SITE_TITLE_SUFFIX}`;
}
---

<!doctype html>
<html lang="en">
    <Head {title} {description} />
    <body>
        <SiteHeader />
        <main>
            <section class="container section-padding-block">
                <MarkdownRenderer>
                    <slot />
                </MarkdownRenderer>
            </section>
        </main>
        <SiteFooter />
    </body>
</html>

<style>
    main {
        padding-top: 80px; /* Account for fixed header height */
    }

    @media (min-width: 768px) {
        main {
            padding-top: 90px; /* Slightly more padding on larger screens */
        }
    }
</style>
