---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Product Validation Services | Hanif Carroll";
const pageDescription =
    "Most founders waste months building things nobody wants. I help founders validate their product ideas with real customers and test working prototypes before they invest in development.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Section 1: The Hero - Hook Their Pain Point -->
    <section class="hero-section">
        <div class="container section-padding-block">
            <div class="hero-content">
                <h1 class="hero-title">
                    Most Founders Waste Months Building Things Nobody Wants
                </h1>
                <p class="hero-subtitle">
                    I help founders validate their product ideas with real
                    customers and test working prototypes before they invest in
                    development.
                </p>
                <div class="hero-cta">
                    <a
                        href="https://cal.com/hanifcarroll/validation"
                        class="cta-button primary"
                    >
                        Schedule a Free Validation Call
                    </a>
                    <p class="cta-subtext">
                        30-minute call ‚Ä¢ No commitment ‚Ä¢ Get clarity on your
                        next steps
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Section 2: The Problem - Agitate and Empathize -->
