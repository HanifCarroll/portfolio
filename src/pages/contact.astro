---
import BaseLayout from "../layouts/BaseLayout.astro";
import { createPageTitle } from "../utils/siteConfig";

const pageTitle = createPageTitle("Contact");
const pageDescription =
    "Ready to turn your idea into reality? Book a free strategy session to discuss your challenges and find the right path forward.";
---

<BaseLayout
    title={pageTitle}
    description={pageDescription}
    hideFooterCTA={true}
>
    <!-- Hero Section -->
    <section class="bg-white text-gray-800">
        <div class="max-w-3xl mx-auto px-6 py-20 md:py-[100px] lg:py-[120px]">
            <div class="text-center mb-16">
                <h1
                    class="text-5xl font-light tracking-tight text-gray-900 leading-tight mb-4 md:text-[2.75rem]"
                >
                    Ready to turn your idea into reality?
                </h1>
                <p
                    class="text-lg font-light leading-relaxed text-gray-500 max-w-2xl mx-auto"
                >
                    Book a free strategy session to discuss your challenges and
                    find the right path forward.
                </p>
            </div>
        </div>
    </section>

    <!-- Is This For You Section -->
    <section class="bg-gray-50 border-t border-gray-100">
        <div class="max-w-3xl mx-auto px-6 py-20 md:py-[100px] lg:py-[120px]">
            <h2 class="text-3xl font-light text-gray-900 mb-12 text-center">
                Is This For You?
            </h2>
            <div class="space-y-4 max-w-2xl mx-auto">
                <div class="flex items-start gap-4">
                    <div
                        class="w-6 h-6 rounded-full bg-accent-100 flex items-center justify-center flex-shrink-0 mt-1"
                    >
                        <svg
                            class="w-3 h-3 text-accent-600"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <p class="text-gray-700 leading-relaxed">
                        You're a <strong
                            >bootstrapped nontechnical founder</strong
                        > with an ambitious product idea
                    </p>
                </div>
                <div class="flex items-start gap-4">
                    <div
                        class="w-6 h-6 rounded-full bg-accent-100 flex items-center justify-center flex-shrink-0 mt-1"
                    >
                        <svg
                            class="w-3 h-3 text-accent-600"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <p class="text-gray-700 leading-relaxed">
                        You need <strong>clarity</strong> on your MVP scope, technical
                        approach, or product strategy
                    </p>
                </div>
                <div class="flex items-start gap-4">
                    <div
                        class="w-6 h-6 rounded-full bg-accent-100 flex items-center justify-center flex-shrink-0 mt-1"
                    >
                        <svg
                            class="w-3 h-3 text-accent-600"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <p class="text-gray-700 leading-relaxed">
                        You're ready to <strong>build fast</strong> and ship something
                        real in weeks, not months
                    </p>
                </div>
                <div class="flex items-start gap-4">
                    <div
                        class="w-6 h-6 rounded-full bg-accent-100 flex items-center justify-center flex-shrink-0 mt-1"
                    >
                        <svg
                            class="w-3 h-3 text-accent-600"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <p class="text-gray-700 leading-relaxed">
                        You value <strong>candid guidance</strong> over generic advice
                        or cookie-cutter solutions
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Who It's Not For Section -->
    <section class="bg-white border-t border-gray-100">
        <div class="max-w-3xl mx-auto px-6 py-20 md:py-[100px] lg:py-[120px]">
            <h2 class="text-3xl font-light text-gray-900 mb-12 text-center">
                Who It's Not For
            </h2>
            <div class="space-y-4 max-w-2xl mx-auto">
                <div class="flex items-start gap-4">
                    <div class="w-6 h-6 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-3 h-3 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <p class="text-gray-700 leading-relaxed">
                        You're looking for <strong>cheap development</strong> or want to build everything yourself
                    </p>
                </div>
                <div class="flex items-start gap-4">
                    <div class="w-6 h-6 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-3 h-3 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <p class="text-gray-700 leading-relaxed">
                        You need <strong>complex enterprise software</strong> or have unlimited time and budget
                    </p>
                </div>
                <div class="flex items-start gap-4">
                    <div class="w-6 h-6 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-3 h-3 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <p class="text-gray-700 leading-relaxed">
                        You want someone to <strong>just execute your specs</strong> without strategic input
                    </p>
                </div>
                <div class="flex items-start gap-4">
                    <div class="w-6 h-6 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-3 h-3 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <p class="text-gray-700 leading-relaxed">
                        You're not ready to <strong>make decisions quickly</strong> or adapt based on user feedback
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- 3-Step Process Section -->
    <section class="bg-white border-t border-gray-100">
        <div class="max-w-4xl mx-auto px-6 py-20 md:py-[100px] lg:py-[120px]">
            <h2 class="text-3xl font-light text-gray-900 mb-16 text-center">
                How It Works
            </h2>
            <div class="grid gap-12 md:grid-cols-3">
                <div class="text-center">
                    <div
                        class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6"
                    >
                        <span class="text-accent-600 font-semibold text-lg"
                            >1</span
                        >
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-4">
                        Book a Call
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        Schedule a free 30-minute strategy session. Come
                        prepared with your idea, challenges, and questions.
                    </p>
                </div>
                <div class="text-center">
                    <div
                        class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6"
                    >
                        <span class="text-accent-600 font-semibold text-lg"
                            >2</span
                        >
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-4">
                        Get Clear Direction
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        Walk away with concrete next steps, whether that's
                        refining your MVP scope or diving straight into
                        development.
                    </p>
                </div>
                <div class="text-center">
                    <div
                        class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6"
                    >
                        <span class="text-accent-600 font-semibold text-lg"
                            >3</span
                        >
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-4">
                        Build Together
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        If we're a good fit, choose from discovery sprints,
                        prototype development, or ongoing fractional CTO
                        support.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="bg-gray-50 border-t border-gray-100">
        <div class="max-w-3xl mx-auto px-6 py-20 md:py-[100px] lg:py-[120px]">
            <h2 class="text-3xl font-light text-gray-900 mb-16 text-center">
                Frequently Asked Questions
            </h2>
            <div class="space-y-8">
                <div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        What happens during the strategy call?
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        We'll discuss your idea, current challenges, and goals.
                        I'll ask probing questions to understand your users,
                        you're starting from scratch or have a prototype that
                        needs refinement, I can help clarify your path forward.
                    </p>
                </div>
                <div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        What if I'm not technical at all?
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        Perfect—that's exactly who I work with. I translate
                        technical complexity into plain language and help you
                        make informed decisions without needing to become a
                        developer yourself.
                    </p>
                </div>
                <div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        How quickly can we start working together?
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        After our strategy call, I can typically start discovery
                        work within 1-2 weeks and development projects within
                        2-3 weeks, depending on scope and my current capacity.
                    </p>
                </div>
                <div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        What's your approach to pricing?
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        All services are fixed-price with clear deliverables and
                        timelines. No hourly billing, no scope creep, no
                        surprises. You know exactly what you're getting and what
                        it costs upfront.
                    </p>
                </div>
                <div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        Do you offer ongoing support after launch?
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        Yes! I offer fractional CTO services on a month-to-month
                        basis for ongoing product development, technical
                        leadership, and strategic guidance as you grow.
                    </p>
                </div>
                <div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        What if we're not a good fit?
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        I'll tell you honestly during our call. If I'm not the
                        right person to help, I'll do my best to point you
                        toward better resources or alternatives. No hard
                        feelings, no sales pressure.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Cal.com Embed Section -->
    <section id="book" class="bg-white border-t border-gray-100">
        <div class="max-w-3xl mx-auto px-6 py-20 md:py-[100px] lg:py-[120px]">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-light text-gray-900 mb-4">
                    Book Your Strategy Session
                </h2>
                <p class="text-gray-600">
                    30 minutes · No sales pressure · Actionable next steps
                </p>
            </div>

            <!-- Cal.com Embed -->
            <div class="cal-embed-container">
                <!-- Cal inline embed code begins -->
                <div
                    style="width:100%;height:100%;overflow:scroll"
                    id="my-cal-inline-strategy"
                >
                </div>
                <script type="text/javascript">
                    (function (C, A, L) {
                        let p = function (a, ar) {
                            a.q.push(ar);
                        };
                        let d = C.document;
                        C.Cal =
                            C.Cal ||
                            function () {
                                let cal = C.Cal;
                                let ar = arguments;
                                if (!cal.loaded) {
                                    cal.ns = {};
                                    cal.q = cal.q || [];
                                    d.head.appendChild(
                                        d.createElement("script")
                                    ).src = A;
                                    cal.loaded = true;
                                }
                                if (ar[0] === L) {
                                    const api = function () {
                                        p(api, arguments);
                                    };
                                    const namespace = ar[1];
                                    api.q = api.q || [];
                                    if (typeof namespace === "string") {
                                        cal.ns[namespace] =
                                            cal.ns[namespace] || api;
                                        p(cal.ns[namespace], ar);
                                        p(cal, ["initNamespace", namespace]);
                                    } else p(cal, ar);
                                    return;
                                }
                                p(cal, ar);
                            };
                    })(window, "https://app.cal.com/embed/embed.js", "init");
                    Cal("init", "strategy", { origin: "https://app.cal.com" });

                    Cal.ns.strategy("inline", {
                        elementOrSelector: "#my-cal-inline-strategy",
                        config: { layout: "week_view" },
                        calLink: "hanifcarroll/strategy",
                    });

                    Cal.ns.strategy("ui", {
                        hideEventTypeDetails: true,
                        layout: "week_view",
                    });
                </script>
                <!-- Cal inline embed code ends -->
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    .cal-embed-container iframe {
        min-height: 600px;
    }

    @media (max-width: 768px) {
        .cal-embed-container iframe {
            min-height: 700px;
        }
    }
</style>
