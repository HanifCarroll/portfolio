---
import { SITE_DESCRIPTION } from "../consts";
import BaseLayout from "../layouts/BaseLayout.astro";
import { projects } from "../lib/project-cards";
import PortfolioShowcase from "../components/PortfolioShowcase.astro";
import { Image } from "astro:assets";
import HeroImage from "@src/assets/img/portrait-brick.webp";
import testimonials from "../../testimonials.json";

// Testimonial photos
import monicaPhoto from "@src/assets/img/monica.jpeg";
import markisPhoto from "@src/assets/img/markis.jpeg";
import sarahPhoto from "@src/assets/img/sarah.jpeg";

const featuredProjects = projects.slice(0, 3);

const testimonialPhotos: Record<string, ImageMetadata> = {
    "Monica Londoño": monicaPhoto,
    "Markis Zarate": markisPhoto,
    "Sarah Hibner": sarahPhoto,
};
---

<BaseLayout
    title="Hanif Carroll - Full-stack Product Engineer"
    description={SITE_DESCRIPTION}
>
    <div class="container space-y-32 py-16">
        <!-- Hero Section -->
        <section
            class="relative grid gap-12 md:grid-cols-[minmax(0,1.3fr)_minmax(0,1fr)] md:items-center"
        >
            <div class="space-y-8">
                <!-- Status indicator -->
                <div class="flex items-center gap-3">
                    <span class="status-dot status-dot--active animate-pulse"></span>
                    <span class="font-mono text-xs uppercase tracking-widest text-zinc-500 dark:text-zinc-400">
                        System Online // Available for Work
                    </span>
                </div>

                <!-- Main heading -->
                <h1 class="heading-display text-6xl md:text-7xl text-black dark:text-white">
                    Hanif<br />Carroll
                </h1>

                <!-- Role with brackets -->
                <p class="font-mono text-lg text-zinc-600 dark:text-zinc-400">
                    [Full-Stack Product Engineer]
                </p>

                <!-- Description -->
                <p class="max-w-lg text-lg leading-relaxed text-zinc-600 dark:text-zinc-400">
                    I'm a full-stack engineer who thinks about the whole
                    picture—how features get built, how users experience
                    them, and how they drive growth.
                </p>

                <!-- Buttons -->
                <div class="flex flex-wrap gap-4 pt-4">
                    <a
                        class="btn-primary"
                        href="mailto:HanifCarroll@gmail.com"
                    >
                        Initiate Contact
                        <span>&rarr;</span>
                    </a>
                    <a
                        class="btn-secondary"
                        href="/Hanif_Carroll_Fullstack_Product_Engineer.pdf"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        View Resume
                    </a>
                </div>
            </div>

            <!-- Photo with geometric frame -->
            <div class="relative flex justify-center md:justify-end">
                <div class="group relative">
                    <!-- Outer geometric frame -->
                    <div class="absolute -inset-4 border-2 border-black/20 dark:border-white/20"></div>
                    <Image
                        src={HeroImage}
                        alt="Hanif Carroll"
                        loading="eager"
                        class="relative z-10 max-w-xs -scale-x-100 grayscale transition-all duration-500 group-hover:grayscale-0 md:max-w-sm"
                    />
                </div>
            </div>
        </section>

        <!-- Featured Projects -->
        <section class="scroll-mt-16 space-y-12" id="projects">
            <div class="section-header">
                <div class="space-y-2">
                    <span class="section-label">// 01</span>
                    <h2 class="heading-display text-4xl md:text-5xl">Selected Work</h2>
                </div>
                <a
                    href="/projects"
                    class="arrow-link hidden sm:flex"
                >
                    View All
                </a>
            </div>
            <PortfolioShowcase projects={featuredProjects} />
            <a
                href="/projects"
                class="arrow-link sm:hidden"
            >
                View All Projects
            </a>
        </section>

        <!-- Testimonials -->
        <section class="scroll-mt-16 space-y-12">
            <div class="section-header">
                <div class="space-y-2">
                    <span class="section-label">// 02</span>
                    <h2 class="heading-display text-4xl md:text-5xl">Testimonials</h2>
                </div>
            </div>
            <div class="space-y-6">
                {testimonials.map((testimonial) => {
                    const photo = testimonialPhotos[testimonial.name];
                    return (
                        <div class="tech-card p-8">
                            <div class="flex flex-col gap-8 md:flex-row">
                                <!-- Author info -->
                                <div class="flex items-center gap-4 md:w-48 shrink-0">
                                    <div class="relative">
                                        {photo && (
                                            <Image
                                                src={photo}
                                                alt={testimonial.name}
                                                class="h-16 w-16 object-cover grayscale"
                                                width={64}
                                                height={64}
                                            />
                                        )}
                                        <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-primary"></div>
                                    </div>
                                    <div>
                                        <p class="font-bold uppercase text-sm">{testimonial.name}</p>
                                        <p class="font-mono text-xs text-zinc-500 dark:text-zinc-400">
                                            {testimonial.role}
                                        </p>
                                    </div>
                                </div>

                                <!-- Quote -->
                                <div class="flex-1">
                                    <p class="text-lg leading-relaxed text-zinc-600 dark:text-zinc-300">
                                        "{testimonial.text}"
                                    </p>
                                </div>
                            </div>
                        </div>
                    );
                })}
            </div>
        </section>

        <!-- Divider -->
        <div class="grid-line-horizontal"></div>

        <!-- About -->
        <section class="scroll-mt-16 space-y-12" id="about">
            <div class="section-header">
                <div class="space-y-2">
                    <span class="section-label">// 03</span>
                    <h2 class="heading-display text-4xl md:text-5xl">About</h2>
                </div>
            </div>

            <div class="grid gap-6 md:grid-cols-3">
                <!-- My Journey -->
                <div class="tech-card p-8">
                    <div class="space-y-4">
                        <div class="w-12 h-12 border-2 border-primary flex items-center justify-center">
                            <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                            </svg>
                        </div>
                        <h3 class="font-bold uppercase tracking-wide">My Journey</h3>
                        <div class="space-y-3 text-zinc-600 dark:text-zinc-400 text-sm">
                            <p>
                                Started programming in 2017 after deciding physical
                                therapy school wasn't for me.
                            </p>
                            <p>
                                I’ve worked at a large consulting company (Capgemini), a medium size startup (LeagueApps), and now I'm freelancing.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Product-Minded -->
                <div class="tech-card p-8">
                    <div class="space-y-4">
                        <div class="w-12 h-12 border-2 border-primary flex items-center justify-center">
                            <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                            </svg>
                        </div>
                        <h3 class="font-bold uppercase tracking-wide">Product-Minded</h3>
                        <div class="space-y-3 text-zinc-600 dark:text-zinc-400 text-sm">
                            <p>
                                I don't stay in the "engineering" box. I care about
                                UX, product strategy, and understanding user needs.
                            </p>
                            <p>
                                Built scheduling tools adopted by 3,000+ sports
                                organizers.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- What's Next -->
                <div class="tech-card p-8">
                    <div class="space-y-4">
                        <div class="w-12 h-12 border-2 border-primary flex items-center justify-center">
                            <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <h3 class="font-bold uppercase tracking-wide">What's Next</h3>
                        <div class="space-y-3 text-zinc-600 dark:text-zinc-400 text-sm">
                            <p>
                                Open to full-time roles at early-stage startups
                                or freelance engagements for the right projects.
                            </p>
                            <p>
                                I want to build products that empower people—not
                                just sell more ads.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pt-2">
                <a href="/now" class="arrow-link">
                    What I'm up to now
                </a>
            </div>
        </section>

        <!-- Experience -->
        <section class="scroll-mt-16 space-y-12" id="experience">
            <div class="section-header">
                <div class="space-y-2">
                    <span class="section-label">// 04</span>
                    <h2 class="heading-display text-4xl md:text-5xl">Experience</h2>
                </div>
            </div>

            <div class="relative">
                <!-- Timeline line -->
                <div class="absolute left-0 md:left-32 top-0 bottom-0 w-0.5 bg-black dark:bg-white"></div>

                <div class="space-y-12">
                    <!-- Freelance -->
                    <div class="grid grid-cols-1 md:grid-cols-[120px_1fr] gap-8">
                        <div class="hidden md:block text-right">
                            <span class="font-mono text-sm">2024-NOW</span>
                        </div>
                        <div class="relative pl-8">
                            <!-- Square marker -->
                            <div class="absolute left-[-5px] top-1 w-3 h-3 bg-primary border-2 border-black dark:border-white"></div>
                            <div class="space-y-4">
                                <div>
                                    <span class="md:hidden font-mono text-xs text-zinc-500">2024-NOW</span>
                                    <h3 class="font-bold uppercase text-lg">Full-Stack Software Engineer</h3>
                                    <p class="font-mono text-sm text-primary">FREELANCE</p>
                                </div>
                                <ul class="space-y-2 text-sm text-zinc-600 dark:text-zinc-400">
                                    <li class="flex gap-3">
                                        <span class="text-primary">&rarr;</span>
                                        <span>Performed as <strong class="text-black dark:text-white">fractional CTO</strong> for an emerging social events platform, leading a team of 2 juniors.</span>
                                    </li>
                                    <li class="flex gap-3">
                                        <span class="text-primary">&rarr;</span>
                                        <span>Fractional CTO for a video generation platform in the e-commerce space.</span>
                                    </li>
                                    <li class="flex gap-3">
                                        <span class="text-primary">&rarr;</span>
                                        <span>Delivered responsive portfolio websites and landing pages for various clients.</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Nearsure -->
                    <div class="grid grid-cols-1 md:grid-cols-[120px_1fr] gap-8">
                        <div class="hidden md:block text-right">
                            <span class="font-mono text-sm">2023-2024</span>
                        </div>
                        <div class="relative pl-8">
                            <div class="absolute left-[-5px] top-1 w-3 h-3 bg-primary/60 border-2 border-black dark:border-white"></div>
                            <div class="space-y-4">
                                <div>
                                    <span class="md:hidden font-mono text-xs text-zinc-500">2023-2024</span>
                                    <h3 class="font-bold uppercase text-lg">Senior Front End Engineer</h3>
                                    <p class="font-mono text-sm text-primary">NEARSURE</p>
                                </div>
                                <ul class="space-y-2 text-sm text-zinc-600 dark:text-zinc-400">
                                    <li class="flex gap-3">
                                        <span class="text-primary">&rarr;</span>
                                        <span>Improved efficiency for <strong class="text-black dark:text-white">3,000+ sports organizers</strong> by engineering an interactive scheduling tool.</span>
                                    </li>
                                    <li class="flex gap-3">
                                        <span class="text-primary">&rarr;</span>
                                        <span>Enhanced mobile experience with optimized list view for rapid event editing.</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- LeagueApps -->
                    <div class="grid grid-cols-1 md:grid-cols-[120px_1fr] gap-8">
                        <div class="hidden md:block text-right">
                            <span class="font-mono text-sm">2021-2023</span>
                        </div>
                        <div class="relative pl-8">
                            <div class="absolute left-[-5px] top-1 w-3 h-3 bg-primary/40 border-2 border-black dark:border-white"></div>
                            <div class="space-y-4">
                                <div>
                                    <span class="md:hidden font-mono text-xs text-zinc-500">2021-2023</span>
                                    <h3 class="font-bold uppercase text-lg">Front End Engineer</h3>
                                    <p class="font-mono text-sm text-primary">LEAGUEAPPS</p>
                                </div>
                                <ul class="space-y-2 text-sm text-zinc-600 dark:text-zinc-400">
                                    <li class="flex gap-3">
                                        <span class="text-primary">&rarr;</span>
                                        <span>Reduced scheduling time by <strong class="text-black dark:text-white">45%</strong> with intuitive drag-and-drop scheduling grid.</span>
                                    </li>
                                    <li class="flex gap-3">
                                        <span class="text-primary">&rarr;</span>
                                        <span>Eliminated team double-booking with automated conflict detection system.</span>
                                    </li>
                                    <li class="flex gap-3">
                                        <span class="text-primary">&rarr;</span>
                                        <span>Established standardized front-end component library using Styled Components and Storybook.</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Capgemini -->
                    <div class="grid grid-cols-1 md:grid-cols-[120px_1fr] gap-8">
                        <div class="hidden md:block text-right">
                            <span class="font-mono text-sm">2019-2021</span>
                        </div>
                        <div class="relative pl-8">
                            <div class="absolute left-[-5px] top-1 w-3 h-3 bg-primary/20 border-2 border-black dark:border-white"></div>
                            <div class="space-y-4">
                                <div>
                                    <span class="md:hidden font-mono text-xs text-zinc-500">2019-2021</span>
                                    <h3 class="font-bold uppercase text-lg">Software Developer</h3>
                                    <p class="font-mono text-sm text-primary">CAPGEMINI</p>
                                </div>
                                <ul class="space-y-2 text-sm text-zinc-600 dark:text-zinc-400">
                                    <li class="flex gap-3">
                                        <span class="text-primary">&rarr;</span>
                                        <span>Developed comprehensive cruise ship management application covering berthing, reporting, and scheduling.</span>
                                    </li>
                                    <li class="flex gap-3">
                                        <span class="text-primary">&rarr;</span>
                                        <span>Boosted productivity by reducing test suite execution time by <strong class="text-black dark:text-white">60%</strong>.</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Beyond Code -->
        <section class="space-y-12">
            <div class="section-header">
                <div class="space-y-2">
                    <span class="section-label">// 05</span>
                    <h2 class="heading-display text-4xl md:text-5xl">Beyond Code</h2>
                </div>
            </div>

            <div class="grid gap-6 sm:grid-cols-3">
                <div class="tech-card p-6">
                    <div class="space-y-3">
                        <span class="font-mono text-2xl text-primary">01</span>
                        <h3 class="font-bold uppercase">Fitness</h3>
                        <p class="text-sm text-zinc-600 dark:text-zinc-400">
                            20 years of lifting—500 lb squat, 405 lb bench, 620 lb deadlift. Competitive ultimate frisbee player.
                        </p>
                    </div>
                </div>

                <div class="tech-card p-6">
                    <div class="space-y-3">
                        <span class="font-mono text-2xl text-primary">02</span>
                        <h3 class="font-bold uppercase">Community</h3>
                        <p class="text-sm text-zinc-600 dark:text-zinc-400">
                            Ran a social community in Buenos Aires for 3 years, connecting people and building relationships.
                        </p>
                    </div>
                </div>

                <div class="tech-card p-6">
                    <div class="space-y-3">
                        <span class="font-mono text-2xl text-primary">03</span>
                        <h3 class="font-bold uppercase">Learning</h3>
                        <p class="text-sm text-zinc-600 dark:text-zinc-400">
                            Avid reader and podcast listener. Daily writing practice for clearer thinking and communication.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</BaseLayout>
