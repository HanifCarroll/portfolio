---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import FeaturedProjectCard from "../components/FeaturedProjectCard.astro";
import { SITE_CONFIG } from "../utils/siteConfig";

const pageTitle = SITE_CONFIG.defaultTitle;
const pageDescription =
    "Technical Product Expert combining 7+ years of development with user research and strategic thinking. I help agencies and businesses build products users love—from idea to launch in weeks.";

const whyWorkWithMe = [
    {
        title: "Technical + Strategic Hybrid",
        description:
            "Unlike pure developers or consultants, I combine deep technical skills with product strategy and user research. This means I can rapidly prototype ideas during client discussions, then build the production version without losing context or requiring handoffs.",
        features: [
            "Full-stack development with modern technologies",
            "User research and strategic product thinking",
            "Client-facing technical communication",
            "End-to-end product development",
        ],
    },
    {
        title: "Rapid Iteration & Prototyping",
        description:
            "I excel at turning ideas into working prototypes quickly, then iterating based on real user feedback. This approach reduces project risk and gets you to market faster with higher confidence in product-market fit.",
        features: [
            "Functional prototypes in days instead of weeks",
            "Interactive client collaboration and rapid iteration",
            "Quick validation of product assumptions",
            "Seamless transition from prototype to production",
        ],
    },
    {
        title: "Agency-Ready Collaboration",
        description:
            "With experience across enterprise and startup environments, I understand how to work embedded in agency teams, communicate with clients effectively, and deliver on tight timelines without sacrificing quality.",
        features: [
            "Client presentation and technical communication",
            "Cross-functional team collaboration",
            "Agency project timelines and processes",
            "Quality delivery under pressure",
        ],
    },
];

const trustedByCompanies = [
    "Capgemini",
    "LeagueApps",
    "Disney Cruise Line",
    "GE Aerospace",
    "Cisco",
];

const featuredProjects = (await getCollection("projects"))
    .filter((project: CollectionEntry<"projects">) => project.data.isFeatured)
    .sort(
        (a: CollectionEntry<"projects">, b: CollectionEntry<"projects">) =>
            (a.data.order ?? 0) - (b.data.order ?? 0)
    );
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Hero Section -->
    <section class="bg-white text-gray-800 min-h-[80vh] flex items-center">
        <div class="container w-full py-[60px] px-6 md:py-20 lg:py-[100px]">
            <div
                class="flex flex-col gap-12 items-center md:flex-row md:gap-[60px] md:items-center md:text-left lg:gap-20"
            >
                <div class="max-w-[600px] md:flex-1 md:max-w-none">
                    <span
                        class="hero-tagline hero-animate text-[0.9rem] font-medium text-accent-600 uppercase tracking-[0.15em] mb-4 block"
                        data-delay="100">From Idea to Launch in Weeks</span
                    >
                    <h1
                        class="hero-title hero-animate text-[3rem] font-light text-gray-900 m-0 mb-4 leading-[1.1] tracking-tight md:text-[3.5rem] md:mb-6 lg:text-[4rem]"
                        data-delay="200"
                    >
                        Hi, I'm Hanif
                    </h1>
                    <p
                        class="hero-credibility hero-animate text-lg text-gray-600 mb-6 font-normal"
                        data-delay="250"
                    >
                        7 years building products for startups and enterprises
                    </p>
                    <div
                        class="hero-description hero-animate flex flex-col gap-5 mb-10 md:mb-12"
                        data-delay="300"
                    >
                        <p
                            class="text-lg font-light leading-relaxed text-gray-500 m-0 lg:text-[1.25rem]"
                        >
                            I help agencies and businesses build products that
                            users love by combining user research, strategic
                            thinking, and full-stack development in one person.
                        </p>
                        <p
                            class="text-lg font-light leading-relaxed text-gray-500 m-0 lg:text-[1.25rem]"
                        >
                            With 7 years of technical experience, I can quickly
                            turn ideas into working prototypes, then build the
                            production version—eliminating handoff friction and
                            reducing project risk.
                        </p>
                    </div>
                    <div
                        class="hero-actions hero-animate flex flex-col gap-4 items-center md:flex-row md:gap-5 md:items-start"
                        data-delay="400"
                    >
                        <a
                            href="/services"
                            class="hero-button primary inline-block py-button-y px-button-x text-[0.95rem] font-normal tracking-normal transition-all duration-200 ease-in-out rounded-sm text-center w-full transform translate-y-0 bg-gray-800 text-white border border-gray-800 hover:bg-gray-900 hover:border-gray-900 hover:-translate-y-px"
                            >View My Services</a
                        >
                        <a
                            class="hero-button secondary inline-block py-button-y px-button-x text-[0.95rem] font-normal tracking-normal transition-all duration-200 ease-in-out rounded-sm text-center w-full transform translate-y-0 bg-transparent text-gray-800 border border-gray-300 hover:bg-gray-100 hover:border-gray-400 hover:-translate-y-px"
                            href="https://cal.com/hanifcarroll/discovery"
                        >
                            Schedule a Discovery Call
                        </a>
                    </div>
                </div>
                <div
                    class="hero-image-container hero-animate-scale flex-shrink-0"
                    data-delay="500"
                >
                    <img
                        src="img/portrait.webp"
                        alt="Portrait of Hanif Carroll, smiling."
                        class="hero-image w-[280px] h-auto object-cover rounded-sm block transition-transform duration-300 ease-in-out hover:scale-[1.02] md:w-80 lg:w-[360px]"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Brief Services Section -->
    <section class="bg-white text-gray-800 border-t border-gray-100">
        <div
            class="container max-w-container mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]"
        >
            <div class="text-center mb-12">
                <h2
                    class="text-5xl font-light tracking-tight text-gray-900 leading-tight mb-4 md:text-[2.75rem]"
                >
                    How I Can Help You Build Better Products
                </h2>
                <p
                    class="text-lg font-light leading-relaxed text-gray-500 max-w-2xl mx-auto"
                >
                    Whether you need rapid validation, full product development,
                    or a professional web presence, I offer structured services
                    designed to get you results quickly.
                </p>
            </div>
            <div class="grid gap-8 max-w-4xl mx-auto md:grid-cols-3">
                <div class="text-center p-6">
                    <div
                        class="inline-flex items-center justify-center w-16 h-16 bg-accent-100 text-accent-600 rounded-full mb-4"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path
                                d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"
                            ></path>
                            <path
                                d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"
                            ></path>
                            <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"
                            ></path>
                            <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        Discovery & Prototype Sprint
                    </h3>
                    <p class="text-gray-600 mb-4">
                        Test your idea with a working prototype in just 2 weeks.
                    </p>
                    <a
                        href="/services/prototypes"
                        class="text-accent-600 font-medium hover:text-accent-700 transition-colors"
                    >
                        Learn more →
                    </a>
                </div>
                <div class="text-center p-6">
                    <div
                        class="inline-flex items-center justify-center w-16 h-16 bg-accent-100 text-accent-600 rounded-full mb-4"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <rect
                                width="14"
                                height="20"
                                x="5"
                                y="2"
                                rx="2"
                                ry="2"></rect>
                            <path d="M12 18h.01"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        MVP Development
                    </h3>
                    <p class="text-gray-600 mb-4">
                        Go from concept to market-ready product in 6-8 weeks.
                    </p>
                    <a
                        href="/services/mvp-development"
                        class="text-accent-600 font-medium hover:text-accent-700 transition-colors"
                    >
                        Learn more →
                    </a>
                </div>
                <div class="text-center p-6">
                    <div
                        class="inline-flex items-center justify-center w-16 h-16 bg-accent-100 text-accent-600 rounded-full mb-4"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" x2="22" y1="12" y2="12"></line>
                            <path
                                d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        Custom Business Websites
                    </h3>
                    <p class="text-gray-600 mb-4">
                        Professional websites that convert visitors into
                        customers.
                    </p>
                    <a
                        href="/services/websites"
                        class="text-accent-600 font-medium hover:text-accent-700 transition-colors"
                    >
                        Learn more →
                    </a>
                </div>
            </div>
            <div class="text-center mt-10">
                <a
                    href="/services"
                    class="inline-flex items-center justify-center py-3 px-8 bg-accent-600 text-white font-medium rounded-lg hover:bg-accent-700 transition-colors"
                >
                    Explore All Services
                </a>
            </div>
        </div>
    </section>

    <!-- Featured Projects Section -->
    <section id="featured-projects" class="bg-gray-50 text-gray-800">
        <div
            class="container max-w-container mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]"
        >
            <h2
                class="text-5xl font-light tracking-tight text-center mb-4 text-gray-900 leading-tight md:text-[2.75rem]"
            >
                Featured Projects
            </h2>
            <p
                class="text-lg font-light leading-relaxed text-gray-500 text-center max-w-2xl mx-auto mb-[60px] md:mb-20"
            >
                See my approach in action. These personal projects demonstrate
                my ability to combine user research, strategic thinking, and
                technical execution to create meaningful products.
            </p>

            <div class="flex flex-col gap-[60px] md:gap-20 lg:gap-[100px]">
                {
                    featuredProjects.map((project: any) => {
                        return (
                            <FeaturedProjectCard
                                title={project.data.title}
                                description={project.data.description}
                                tags={project.data.tags}
                                image={project.data.image}
                                imageAlt={
                                    project.data.imageAlt ?? project.data.title
                                }
                                slug={project.slug}
                            />
                        );
                    })
                }
            </div>
        </div>
    </section>

    <section class="bg-gray-50 text-gray-800">
        <div
            class="container max-w-container mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]"
        >
            <div
                class="flex flex-col gap-10 items-center md:flex-row md:gap-[60px] md:items-start md:text-left lg:gap-20"
            >
                <div class="flex-shrink-0">
                    <img
                        src="/img/portrait-professional.webp"
                        alt="Professional portrait"
                        class="w-[280px] h-auto object-cover block rounded-sm md:hidden"
                        width="310"
                        height="292"
                        loading="lazy"
                    />
                    <img
                        src="/img/portrait-professional-desktop.webp"
                        alt="Professional portrait"
                        class="hidden md:block w-60 h-auto object-cover rounded-sm lg:w-[280px]"
                        loading="lazy"
                    />
                </div>
                <div class="max-w-[600px] md:text-left">
                    <h2
                        class="text-5xl font-light tracking-tight mb-8 text-gray-900 leading-tight md:text-[2.75rem]"
                    >
                        About
                    </h2>
                    <div class="flex flex-col gap-6">
                        <p
                            class="text-lg font-light leading-relaxed text-gray-500 m-0"
                        >
                            With <strong class="font-medium text-gray-700"
                                >7+ years</strong
                            > of development experience, I've become a Technical
                            Product Expert who combines strategic thinking, user
                            research, and full-stack development to create digital
                            products that users genuinely love.
                        </p>
                        <p
                            class="text-lg font-light leading-relaxed text-gray-500 m-0"
                        >
                            My unique advantage is thinking across the full
                            product lifecycle. I can conduct user research, make
                            strategic decisions, then execute technically—all
                            without handoff delays or lost context.
                        </p>
                        <p
                            class="text-lg font-light leading-relaxed text-gray-500 m-0"
                        >
                            <strong class="font-medium text-gray-700"
                                >Products built for:</strong
                            >
                            {trustedByCompanies.join(", ")}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonial Section -->
    <section class="bg-white text-gray-800 py-20 md:py-[100px] lg:py-[120px]">
        <div class="container max-w-container mx-auto px-6">
            <div class="max-w-3xl mx-auto">
                <h2
                    class="text-5xl font-light tracking-tight text-center text-gray-900 leading-tight mb-12 md:text-[2.75rem]"
                >
                    What People Say
                </h2>
                <div
                    class="bg-gray-50 rounded-lg p-8 md:p-10 border border-gray-100"
                >
                    <div class="flex items-start gap-4 mb-6">
                        <div class="flex-shrink-0">
                            <div
                                class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center"
                            >
                                <span class="text-accent-600 font-medium"
                                    >SH</span
                                >
                            </div>
                        </div>
                        <div>
                            <h4 class="font-medium text-gray-900">
                                Sarah Hibner
                            </h4>
                            <p class="text-sm text-gray-600">
                                Senior Product Designer at LeagueApps
                            </p>
                        </div>
                    </div>
                    <blockquote class="text-gray-700 leading-relaxed">
                        <p class="mb-4">
                            "I got to experience Hanif's collaborative front-end
                            engineering skills in my role as a product designer
                            on the scheduling team at LeagueApps, and he was a
                            pleasure to work with!
                        </p>
                        <p class="mb-4">
                            We worked together mostly on the tournament
                            schedules product, and as my teammate, Hanif:
                        </p>
                        <ul class="list-disc pl-6 space-y-2 mb-4">
                            <li>
                                Suggested design-to-engineering hand-off
                                improvements to help make our team workflow more
                                efficient
                            </li>
                            <li>
                                Provided great feedback when our team was
                                tightening up product requirements during story
                                time reviews
                            </li>
                            <li>
                                Asked insightful follow-up questions during
                                design reviews, in Figma files, and in Jira
                                tickets
                            </li>
                            <li>
                                Brought my Figma designs to life so we could
                                deliver value to our users in a production
                                environment!
                            </li>
                        </ul>
                        <p class="text-gray-700">
                            I'd be happy to collaborate with Hanif again and
                            can't recommend him enough to other teams looking
                            for a collaborative, thorough, and all-around
                            stellar front-end engineer."
                        </p>
                    </blockquote>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-white text-gray-800">
        <div
            class="container max-w-container mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]"
        >
            <h2
                class="text-5xl font-light tracking-tight text-center mb-[60px] text-gray-900 leading-tight md:text-[2.75rem]"
            >
                Why Work With Me
            </h2>
            <div
                class="flex flex-col gap-10 md:gap-8 lg:grid lg:grid-cols-2 lg:gap-8"
            >
                {
                    whyWorkWithMe.map((item, i) => (
                        <div
                            class={`border border-gray-200 rounded-sm p-8 bg-white md:p-10 lg:p-12 ${i === whyWorkWithMe.length - 1 ? "lg:col-span-2 lg:w-[70%] lg:mx-auto" : ""}`}
                        >
                            <h3 class="text-xl font-medium text-gray-900 m-0 mb-4 leading-snug md:text-2xl">
                                {item.title}
                            </h3>
                            <p class="text-lg font-light leading-relaxed text-gray-500 m-0 mb-6 md:text-lg">
                                {item.description}
                            </p>
                            <ul class="list-none p-0 m-0 flex flex-col gap-3">
                                {item.features.map((feature) => (
                                    <li class="text-[0.95rem] leading-relaxed text-gray-600 pl-4 relative font-normal before:content-['—'] before:absolute before:left-0 before:text-accent-600 before:font-light">
                                        {feature}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- My Process Section -->
    <section class="bg-gray-50 text-gray-800 border-t border-gray-100">
        <div
            class="container max-w-[1000px] mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]"
        >
            <h2
                class="text-5xl font-light tracking-tight text-center mb-4 text-gray-900 leading-tight md:text-[2.75rem]"
            >
                My Process
            </h2>
            <p
                class="text-lg font-light leading-relaxed text-gray-500 text-center max-w-[700px] mx-auto mb-16"
            >
                A proven approach that turns ideas into working products
                quickly, with your input every step of the way.
            </p>

            <div
                class="grid gap-8 max-w-[1000px] mx-auto md:grid-cols-2 lg:grid-cols-4"
            >
                <!-- Step 1 -->
                <div class="text-center p-6">
                    <div
                        class="inline-flex items-center justify-center w-12 h-12 bg-accent-100 text-accent-700 rounded-full text-2xl font-semibold mb-4"
                    >
                        1
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        Discovery
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        We discuss your goals, users, and constraints. I ask the
                        right questions to understand what success looks like.
                    </p>
                </div>

                <!-- Step 2 -->
                <div class="text-center p-6">
                    <div
                        class="inline-flex items-center justify-center w-12 h-12 bg-accent-100 text-accent-700 rounded-full text-2xl font-semibold mb-4"
                    >
                        2
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        Rapid Prototyping
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        I quickly build working prototypes to test ideas and get
                        early feedback before committing to full development.
                    </p>
                </div>

                <!-- Step 3 -->
                <div class="text-center p-6">
                    <div
                        class="inline-flex items-center justify-center w-12 h-12 bg-accent-100 text-accent-700 rounded-full text-2xl font-semibold mb-4"
                    >
                        3
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        Iterative Development
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        We work in short cycles with regular check-ins, so you
                        see progress and can course-correct as needed.
                    </p>
                </div>

                <!-- Step 4 -->
                <div class="text-center p-6">
                    <div
                        class="inline-flex items-center justify-center w-12 h-12 bg-accent-100 text-accent-700 rounded-full text-2xl font-semibold mb-4"
                    >
                        4
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        Launch & Support
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        I ensure smooth deployment and provide documentation so
                        your team can maintain and grow the product.
                    </p>
                </div>
            </div>

            <!-- Key Differentiators -->
            <div
                class="mt-16 bg-white rounded-lg p-8 border border-gray-200 max-w-[800px] mx-auto"
            >
                <h3 class="text-2xl font-medium text-gray-900 mb-6 text-center">
                    What Makes My Process Different
                </h3>
                <div class="grid md:grid-cols-3 gap-8">
                    <div class="text-center">
                        <div class="text-accent-600 mb-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="32"
                                height="32"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="mx-auto"
                            >
                                <path
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                                ></path>
                            </svg>
                        </div>
                        <h4 class="text-lg font-medium text-gray-900 mb-2">
                            No Handoffs
                        </h4>
                        <p class="text-sm text-gray-600">
                            I handle strategy, design decisions, and technical
                            implementation—no context lost between teams.
                        </p>
                    </div>
                    <div class="text-center">
                        <div class="text-accent-600 mb-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="32"
                                height="32"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="mx-auto"
                            >
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                            </svg>
                        </div>
                        <h4 class="text-lg font-medium text-gray-900 mb-2">
                            Speed & Quality
                        </h4>
                        <p class="text-sm text-gray-600">
                            Working prototypes in days, not weeks.
                            Production-ready code that's built to scale.
                        </p>
                    </div>
                    <div class="text-center">
                        <div class="text-accent-600 mb-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="32"
                                height="32"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="mx-auto"
                            >
                                <path
                                    d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"
                                ></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                        </div>
                        <h4 class="text-lg font-medium text-gray-900 mb-2">
                            True Collaboration
                        </h4>
