                <div class="absolute -bottom-8 -left-8 h-48 w-48 rounded-full bg-accent-warm/60 blur-2xl dark:bg-primary/5"></div>

                <div class="group relative">
                    <Image
                        src={HeroImage}
                        alt="Hanif Carroll"
                        loading="eager"
                        class="relative z-10 max-w-xs -scale-x-100 rounded-3xl shadow-2xl ring-1 ring-zinc-200/50 transition-transform duration-300 group-hover:-translate-y-1 dark:ring-zinc-700/50 md:max-w-sm"
                    />
