---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Home | Hanif Carroll Web Designer & Developer";
---

<BaseLayout title={pageTitle}>
    <section class="hero-section">
        <div class="container section-padding-block hero-container">
            <div class="img-container">
                <img
                    src="/public/img/portrait.webp"
                    alt="Portrait of Hanif Carroll, smiling."
                />
            </div>
            <div class="hero-text">
                <span class="tagline">Freelance Web Designer & Developer</span>
                <h1>Hi, Iâ€™m Hanif!</h1>
                <p>
                    I partner with small businesses, startups, and freelancers
                    to build websites and web apps that achieve your goals.
                </p>
                <div class="buttons-container">
                    <a href="#contact" class="btn">Let's Chat</a>
                    <a href="#featured-projects" class="btn btn-outline"
                        >View Featured Projects</a
                    >
                </div>
            </div>
        </div>
    </section>

    <section id="featured-projects" class="featured-projects-section">
        <div
            class="container section-padding-block featured-projects-container"
        >
            <h2>Featured Projects</h2>
        </div>
    </section>

    <section class="about-me-section">
        <div class="container section-padding-block about-me-container">
            <h2>About Me</h2>
        </div>
    </section>

    <section class="services-section">
        <div class="container section-padding-block about-me-container">
            <h2>My Services</h2>
        </div>
    </section>

    <section class="cta-section">
        <div class="container section-padding-block cta-container">
            <h4>Ready to get started?</h4>
            <a href="#contact" class="btn btn-secondary">Let's Chat</a>
        </div>
    </section>

    <section class="process-section">
        <div class="container section-padding-block process-container">
            <h2>My Process</h2>
            <div class="process-tabs">
                <nav aria-label="Tabs" id="process-tabs-nav">
                    <button
                        data-target="#design-panel"
                        class="tab-button whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm tab-active"
                        aria-current="page"
                    >
                        Design <span class="tab-break">Only</span>
                    </button>
                    <button
                        data-target="#dev-panel"
                        class="tab-button whitespace-nowrap py-3 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm"
                    >
                        Development <span class="tab-break">Only</span>
                    </button>
                    <button
                        data-target="#both-panel"
                        class="tab-button whitespace-nowrap py-3 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm"
                    >
                        Design +<span class="tab-break">Development</span>
                    </button>
                </nav>

                <div id="process-tab-content" class="">
                    <div id="design-panel" class="tab-panel">
                        <ol class="process-steps">
                            <li>
                                <span class="text-h5">1</span>
                                <div>
                                    <span class="text-bold"
                                        >Discovery & Strategy:</span
                                    > We dive deep into your brand, target audience,
                                    project goals, and overall vision.
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">2</span>
                                <div>
                                    <span class="text-bold"
                                        >Wireframing & UX Mapping:</span
                                    > We create blueprints (wireframes) and map out
                                    user flows to ensure an intuitive user experience.
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">3</span>
                                <div>
                                    <span class="text-bold"
                                        >UI Design & Mockups:</span
                                    > We bring the wireframes to life with visually
                                    appealing designs, color palettes, typography,
                                    and high-fidelity mockups.
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">4</span>
                                <div>
                                    <span class="text-bold"
                                        >Prototyping & Feedback:</span
                                    > We build interactive prototypes so you can
                                    click through the design, followed by rounds
                                    of feedback and revisions.
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">5</span>
                                <div>
                                    <span class="text-bold">Final Handoff:</span
                                    > You receive all organized design files, assets,
                                    a style guide, and any necessary documentation
                                    for your developers.
                                </div>
                            </li>
                        </ol>
                    </div>
                    <div id="dev-panel" class="tab-panel hidden">
                        <ol class="process-steps">
                            <li>
                                <span class="text-h5">1</span>
                                <div>
                                    <span class="text-bold"
                                        >Design Review & Technical Planning:</span
                                    >
                                    We review your provided designs & specs, then
                                    plan the technical development strategy.
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">2</span>
                                <div>
                                    <span class="text-bold"
                                        >Front-End Development:</span
                                    >
                                    We build the user interface, translating designs
                                    into clean, responsive code (HTML, CSS, JS).
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">3</span>
                                <div>
                                    <span class="text-bold"
                                        >Back-End Development & Integration (If
                                        Applicable):</span
                                    >
                                    We develop necessary back-end logic (databases,
                                    APIs, CMS) and integrate it seamlessly (if required).
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">4</span>
                                <div>
                                    <span class="text-bold"
                                        >Testing & Quality Assurance:</span
                                    >
                                    We rigorously test functionality, performance,
                                    and compatibility across browsers & devices.
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">5</span>
                                <div>
                                    <span class="text-bold"
                                        >Deployment & Handoff:</span
                                    >
                                    We deploy the code to your hosting and hand off
                                    the final project files & documentation.
                                </div>
                            </li>
                        </ol>
                    </div>
                    <div id="both-panel" class="tab-panel hidden">
                        <ol class="process-steps">
                            <li>
                                <span class="text-h5">1</span>
                                <div>
                                    <span class="text-bold"
                                        >Discovery & Strategy:</span
                                    >
                                    We dive deep into your brand, target audience,
                                    project goals, and overall vision.
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">2</span>
                                <div>
                                    <span class="text-bold"
                                        >Wireframing & UX Mapping:</span
                                    >
                                    We create blueprints (wireframes) and map out
                                    user flows to ensure an intuitive user experience.
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">3</span>
                                <div>
                                    <span class="text-bold"
                                        >UI Design & Prototyping:</span
                                    >
                                    We craft visually appealing designs and build
                                    interactive prototypes for feedback and revisions.
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">4</span>
                                <div>
                                    <span class="text-bold"
                                        >Full-Stack Development:</span
                                    >
                                    We translate the final design into clean, responsive
                                    code (front-end & back-end), building out the
                                    full website/application.
                                </div>
                            </li>
                            <li>
                                <span class="text-h5">5</span>
                                <div>
                                    <span class="text-bold"
                                        >Testing & Launch:</span
                                    >
                                    We rigorously test across devices, deploy the
                                    finished product to your hosting, and provide
                                    final files and documentation.
                                </div>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    /* HERO SECTION START */
    .hero-container {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .hero-section .img-container {
        display: flex;
        justify-content: center;
        align-items: stretch;
        width: 100%;
        height: 100%;
        margin-inline: auto;
    }

    .hero-section img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        max-width: 300px;
    }

    .hero-section .tagline {
        font-size: 12px;
        text-transform: uppercase;
        color: var(--primary-300);
    }

    .hero-section .buttons-container {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        gap: 8px;
        text-align: center;
        margin-top: 16px;
    }

    .hero-section a {
        text-decoration: none;
    }
    /* HERO SECTION END */

    /* CTA SECTION START */
    .cta-section {
        background-color: var(--primary-500);
        color: var(--secondary-500);
    }

    .cta-container {
        display: flex;
        flex-direction: column;
        gap: 40px;
        justify-content: center;
        align-items: center;
    }
    /* CTA SECTION END */

    /* PROCESS SECTION START */
    .process-section {
        background-color: var(--secondary-100);
    }

    .tab-break {
        display: block;
    }

    @media (min-width: 768px) {
        .tab-break {
            display: inline;
        }
    }

    .process-tabs nav {
        display: flex;
        gap: 24px;
        border-bottom: 1px solid var(--secondary-600);
        margin-bottom: 20px;
    }

    .process-tabs .tab-button {
        white-space: nowrap;
        padding: 12px 4px;
        border-bottom: 2px solid transparent;
        color: var(--primary-300);
        font-weight: 500;
        font-size: 1rem;
        background: none;
        border-top: none;
        border-left: none;
        border-right: none;
        cursor: pointer;
        text-align: center;
        transition:
            border-color 0.2s,
            color 0.2s;
    }

    .process-tabs .tab-button:hover {
        color: var(--primary-500);
        border-bottom-color: var(--primary-200);
    }

    .process-tabs .tab-button.tab-active {
        border-bottom-color: var(--primary-500);
        color: var(--primary-500);
        font-weight: 600;
    }

    .process-tabs .tab-button.tab-active:hover {
        border-bottom-color: var(--primary-500);
        color: var(--primary-500);
    }

    .tab-panel {
        /* Base styles for panels - they are shown/hidden by the 'hidden' class */
        padding: 16px 0;
    }

    .process-steps {
        display: flex;
        flex-direction: column;
        gap: 20px;
        list-style: none;
    }

    .process-steps li {
        display: flex;
        align-items: center;
        gap: 20px;
        line-height: 1.6;
        margin-bottom: 12px;
    }

    /* PROCESS SECTION END */

    @media (min-width: 768px) {
        /* HERO SECTION START */
        .hero-section .tagline {
            font-size: 16px;
        }
        .hero-section p {
            margin-block: 32px;
        }
        .hero-container {
            display: flex;
            flex-direction: row;
            gap: 40px;
        }
        .hero-section .img-container {
            order: 2;
            width: 100%;
            max-width: 550px;
        }
        .hero-section .hero-text {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .hero-section .buttons-container {
            flex-direction: row;
            gap: 16px;
        }
        /* HERO SECTION END */

        /* PROCESS SECTION START */
        .process-tabs .tab-button {
            font-size: 1.25rem;
        }

        .process-steps {
            gap: 40px;
        }
        /* PROCESS SECTION END */
    }

    @media (min-width: 1280px) {
        /* HERO SECTION START */
        .hero-section .tagline {
            font-size: 24px;
        }

        .hero-section img {
            max-width: 330px;
        }
        /* HERO SECTION END */
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const processTabsNav = document.getElementById("process-tabs-nav");
        const processTabContent = document.getElementById(
            "process-tab-content"
        );

        if (processTabsNav && processTabContent) {
            const processTabButtons =
                processTabsNav.querySelectorAll(".tab-button");
            const processTabPanels =
                processTabContent.querySelectorAll(".tab-panel");

            processTabButtons.forEach((button) => {
                button.addEventListener("click", () => {
                    const targetPanelId = button.getAttribute("data-target"); // e.g., "#design-panel"

                    if (targetPanelId) {
                        const targetPanel =
                            processTabContent.querySelector(targetPanelId);

                        // 1. Deactivate all tab buttons:
                        processTabButtons.forEach((btn) => {
                            btn.classList.remove("tab-active");
                            btn.removeAttribute("aria-current");
                        });

                        // 2. Hide all content panels:
                        processTabPanels.forEach((panel) => {
                            panel.classList.add("hidden");
                        });

                        // 3. Activate the clicked button:
                        button.classList.add("tab-active");
                        button.setAttribute("aria-current", "page");

                        // 4. Show the corresponding target content panel:
                        if (targetPanel) {
                            targetPanel.classList.remove("hidden");
                        } else {
                            console.error(
                                `Target panel with ID "${targetPanelId}" not found.`
                            );
                        }
                    } else {
                        console.error(
                            "Clicked tab button does not have a 'data-target' attribute."
                        );
                    }
                });
            });
        } else {
            console.error(
                "Process tabs navigation or content area not found. Elements with IDs 'process-tabs-nav' and 'process-tab-content' must exist."
            );
        }
    });
</script>
