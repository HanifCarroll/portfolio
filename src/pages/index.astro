            </div>
        </section>

        <!-- Featured Projects -->
        <section class="scroll-mt-16 space-y-10" id="projects">
            <div class="flex items-end justify-between gap-4">
                <div class="space-y-2">
                    <span class="text-sm font-semibold uppercase tracking-widest text-primary">
                        Selected Work
                    </span>
                    <h2 class="font-serif text-4xl tracking-tight text-zinc-900 dark:text-zinc-100 italic">
                        Featured Projects
