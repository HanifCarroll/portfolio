---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/home/HeroSection.astro";
import FeaturedProjectsSection from "../components/home/FeaturedProjectsSection.astro";
import MyProcessSection from "../components/home/MyProcessSection.astro";

const pageTitle =
    "Hanif Carroll | Product Engineer - Research, Strategy, and Code";
const pageDescription =
    "Product Engineer combining 7+ years of frontend development with user-centered design. Currently seeking Product Engineer roles at seed-stage startups.";

const services = [
    {
        title: "Product Strategy & Research",
        description:
            "I start by understanding users deeply, not just implementing features quickly. My approach combines user research insights with strategic thinking to identify what problems are worth solving and how to solve them effectively.",
        features: [
            "User research & problem validation",
            "Product strategy & roadmap planning",
            "User journey mapping & optimization",
            "Market analysis & competitive research",
        ],
    },
    {
        title: "Technical Product Development",
        description:
            "My technical background enables me to rapidly build and test product ideas with real functionality. I create working prototypes that validate assumptions before committing to full development, saving time and reducing risk.",
        features: [
            "Functional prototypes with real data flow",
            "Quick iteration based on user feedback",
            "Full-stack application development",
            "Technical feasibility assessment",
        ],
    },
    {
        title: "Full-Stack Product Building",
        description:
            "I bridge the gap between product vision and technical reality by handling both strategic decisions and implementation. This eliminates miscommunication and ensures product ideas translate into working solutions that users love.",
        features: [
            "End-to-end feature development",
            "Modern full-stack development",
            "Scalable, performance-optimized user experiences",
            "Cross-functional team collaboration",
        ],
    },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <HeroSection />

    <FeaturedProjectsSection />

    <section class="about-section">
        <div class="container about-container">
            <div class="about-content">
                <div class="portrait-container">
                    <img
                        src="/img/portrait-professional.webp"
                        alt="Professional portrait"
                        class="portrait-image"
                        width="310"
                        height="292"
                        loading="lazy"
                    />
                    <img
                        src="/img/portrait-professional-desktop.webp"
                        alt="Professional portrait"
                        class="portrait-image-desktop"
                        loading="lazy"
                    />
                </div>
                <div class="about-text">
                    <h2 class="about-heading">About</h2>
                    <div class="about-paragraphs">
                        <p>
                            With 7+ years of frontend development experience,
                            I've evolved into a Product Engineer who combines
                            technical execution with product strategy and user
                            research to create digital products that users
                            genuinely love.
                        </p>
                        <p>
                            My unique advantage is thinking across the full
                            product lifecycle. I can conduct user research to
                            identify real problems, make strategic decisions
                            about what to build, then execute technically using
                            modern development tools—all without handoff delays
                            or lost context.
                        </p>
                        <p>
                            My experience ranges from enterprise environments
                            (Capgemini) to fast-moving startups (LeagueApps),
                            giving me deep understanding of how successful
                            products get built and the cross-functional
                            collaboration skills essential in early-stage
                            environments.
                        </p>
                        <p>
                            I'm passionate about creating products that bring
                            people together and help them live more fulfilling
                            lives. Currently seeking Founding/Product Engineer
                            roles at seed-stage startups where I can contribute
                            to product strategy while building the technical
                            foundation.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="capabilities-section">
        <div class="container capabilities-container">
            <h2 class="capabilities-heading">What I Bring</h2>
            <div class="capabilities-grid">
                {
                    services.map((service) => (
                        <div class="capability-card">
                            <h3 class="capability-title">{service.title}</h3>
                            <p class="capability-description">
                                {service.description}
                            </p>
                            <ul class="capability-list">
                                {service.features.map((feature) => (
                                    <li class="capability-item">{feature}</li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <MyProcessSection />
</BaseLayout>

<style>
    .about-section {
        background-color: #fafafa;
        color: #2c2c2c;
    }

    .about-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 80px 24px;
    }

    .about-content {
        display: flex;
        flex-direction: column;
        gap: 40px;
        align-items: center;
    }

    .portrait-container {
        flex-shrink: 0;
    }

    .portrait-image {
        width: 280px;
        height: auto;
        object-fit: cover;
        display: block;
        border-radius: 2px;
    }

    .portrait-image-desktop {
        display: none;
    }

    .about-text {
        max-width: 600px;
    }

    .about-heading {
        font-size: 2.25rem;
        font-weight: 300;
        letter-spacing: -0.02em;
        margin-bottom: 32px;
        color: #1a1a1a;
        line-height: 1.2;
    }

    .about-paragraphs {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .about-paragraphs p {
        font-size: 1.125rem;
        line-height: 1.6;
        color: #666;
        font-weight: 300;
        margin: 0;
    }

    .capabilities-section {
        background-color: #ffffff;
        color: #2c2c2c;
    }

    .capabilities-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 80px 24px;
    }

    .capabilities-heading {
        font-size: 2.25rem;
        font-weight: 300;
        letter-spacing: -0.02em;
        text-align: center;
        margin-bottom: 60px;
        color: #1a1a1a;
        line-height: 1.2;
    }

    .capabilities-grid {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .capability-card {
        border: 1px solid #e5e5e5;
        border-radius: 2px;
        padding: 32px;
        background-color: #ffffff;
    }

    .capability-title {
        font-size: 1.25rem;
        font-weight: 500;
        color: #1a1a1a;
        margin: 0 0 16px 0;
        line-height: 1.3;
    }

    .capability-description {
        font-size: 1rem;
        line-height: 1.6;
        color: #666;
        margin: 0 0 24px 0;
        font-weight: 300;
    }

    .capability-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .capability-item {
        font-size: 0.95rem;
        line-height: 1.5;
        color: #555;
        padding-left: 16px;
        position: relative;
        font-weight: 400;
    }

    .capability-item::before {
        content: "—";
        position: absolute;
        left: 0;
        color: var(--accent-600);
        font-weight: 300;
    }

    @media (min-width: 768px) {
        .about-container {
            padding: 100px 24px;
        }

        .about-content {
            flex-direction: row;
            gap: 60px;
            align-items: flex-start;
            text-align: left;
        }

        .about-text {
            text-align: left;
        }

        .portrait-image {
            display: none;
        }

        .portrait-image-desktop {
            display: block;
            width: 240px;
            height: auto;
            object-fit: cover;
            border-radius: 2px;
        }

        .about-heading {
            font-size: 2.75rem;
            margin-bottom: 36px;
        }

        .about-paragraphs p {
            font-size: 1.125rem;
        }

        .capabilities-container {
            padding: 100px 24px;
        }

        .capabilities-heading {
            font-size: 2.75rem;
            margin-bottom: 80px;
        }

        .capabilities-grid {
            gap: 32px;
        }

        .capability-card {
            padding: 40px;
        }

        .capability-title {
            font-size: 1.375rem;
        }

        .capability-description {
            font-size: 1.125rem;
        }
    }

    @media (min-width: 1024px) {
        .about-content {
            gap: 80px;
        }

        .portrait-image-desktop {
            width: 280px;
            height: auto;
        }

        .capabilities-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 32px;
        }

        .capability-card:last-child {
            grid-column: 1 / -1;
            width: 70%;
            margin: 0 auto;
        }
    }
</style>
