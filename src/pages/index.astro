---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/home/HeroSection.astro";
import FeaturedProjectsSection from "../components/home/FeaturedProjectsSection.astro";
import MyProcessSection from "../components/home/MyProcessSection.astro";
import { SITE_CONFIG } from "../utils/siteConfig";

const pageTitle = SITE_CONFIG.defaultTitle;
const pageDescription =
    "Technical Product Expert helping agencies and businesses build products users love. Combining 7+ years of development with user research and strategic thinking.";

const whyWorkWithMe = [
    {
        title: "Technical + Strategic Hybrid",
        description:
            "Unlike pure developers or consultants, I combine deep technical skills with product strategy and user research. This means I can rapidly prototype ideas during client discussions, then build the production version without losing context or requiring handoffs.",
        features: [
            "Full-stack development with modern technologies",
            "User research and strategic product thinking",
            "Client-facing technical communication",
            "End-to-end product development",
        ],
    },
    {
        title: "Rapid Iteration & Prototyping",
        description:
            "I excel at turning ideas into working prototypes quickly, then iterating based on real user feedback. This approach reduces project risk and gets you to market faster with higher confidence in product-market fit.",
        features: [
            "Functional prototypes in days instead of weeks",
            "Interactive client collaboration and rapid iteration",
            "Quick validation of product assumptions",
            "Seamless transition from prototype to production",
        ],
    },
    {
        title: "Agency-Ready Collaboration",
        description:
            "With experience across enterprise and startup environments, I understand how to work embedded in agency teams, communicate with clients effectively, and deliver on tight timelines without sacrificing quality.",
        features: [
            "Client presentation and technical communication",
            "Cross-functional team collaboration",
            "Agency project timelines and processes",
            "Quality delivery under pressure",
        ],
    },
];

const trustedByCompanies = [
    "Capgemini",
    "LeagueApps",
    "Disney Cruise Line",
    "GE Aerospace",
    "Cisco",
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <HeroSection />

    <!-- Brief Services Section -->
    <section class="bg-white text-gray-800 border-t border-gray-100">
        <div
            class="container max-w-container mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]"
        >
            <div class="text-center mb-12">
                <h2
                    class="text-5xl font-light tracking-tight text-gray-900 leading-tight mb-4 md:text-[2.75rem]"
                >
                    How I Can Help You Build Better Products
                </h2>
                <p
                    class="text-lg font-light leading-relaxed text-gray-500 max-w-2xl mx-auto"
                >
                    Whether you need rapid validation, full product development,
                    or a professional web presence, I offer structured services
                    designed to get you results quickly.
                </p>
            </div>
            <div class="grid gap-8 max-w-4xl mx-auto md:grid-cols-3">
                <div class="text-center p-6">
                    <div
                        class="inline-flex items-center justify-center w-16 h-16 bg-accent-100 text-accent-600 rounded-full mb-4"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path
                                d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"
                            ></path>
                            <path
                                d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"
                            ></path>
                            <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"
                            ></path>
                            <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        Discovery & Prototype Sprint
                    </h3>
                    <p class="text-gray-600 mb-4">
                        Test your idea with a working prototype in just 2 weeks.
                    </p>
                    <a
                        href="/services/prototypes"
                        class="text-accent-600 font-medium hover:text-accent-700 transition-colors"
                    >
                        Learn more →
                    </a>
                </div>
                <div class="text-center p-6">
                    <div
                        class="inline-flex items-center justify-center w-16 h-16 bg-accent-100 text-accent-600 rounded-full mb-4"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <rect
                                width="14"
                                height="20"
                                x="5"
                                y="2"
                                rx="2"
                                ry="2"></rect>
                            <path d="M12 18h.01"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        MVP Development
                    </h3>
                    <p class="text-gray-600 mb-4">
                        Go from concept to market-ready product in 6-8 weeks.
                    </p>
                    <a
                        href="/services/mvp-development"
                        class="text-accent-600 font-medium hover:text-accent-700 transition-colors"
                    >
                        Learn more →
                    </a>
                </div>
                <div class="text-center p-6">
                    <div
                        class="inline-flex items-center justify-center w-16 h-16 bg-accent-100 text-accent-600 rounded-full mb-4"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" x2="22" y1="12" y2="12"></line>
                            <path
                                d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-3">
                        Custom Business Websites
                    </h3>
                    <p class="text-gray-600 mb-4">
                        Professional websites that convert visitors into
                        customers.
                    </p>
                    <a
                        href="/services/websites"
                        class="text-accent-600 font-medium hover:text-accent-700 transition-colors"
                    >
                        Learn more →
                    </a>
                </div>
            </div>
            <div class="text-center mt-10">
                <a
                    href="/services"
                    class="inline-flex items-center justify-center py-3 px-8 bg-accent-600 text-white font-medium rounded-lg hover:bg-accent-700 transition-colors"
                >
                    Explore All Services
                </a>
            </div>
        </div>
    </section>

    <FeaturedProjectsSection />

    <section class="bg-gray-50 text-gray-800">
        <div
            class="container max-w-container mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]"
        >
            <div
                class="flex flex-col gap-10 items-center md:flex-row md:gap-[60px] md:items-start md:text-left lg:gap-20"
            >
                <div class="flex-shrink-0">
                    <img
                        src="/img/portrait-professional.webp"
                        alt="Professional portrait"
                        class="w-[280px] h-auto object-cover block rounded-sm md:hidden"
                        width="310"
                        height="292"
                        loading="lazy"
                    />
                    <img
                        src="/img/portrait-professional-desktop.webp"
                        alt="Professional portrait"
                        class="hidden md:block w-60 h-auto object-cover rounded-sm lg:w-[280px]"
                        loading="lazy"
                    />
                </div>
                <div class="max-w-[600px] md:text-left">
                    <h2
                        class="text-5xl font-light tracking-tight mb-8 text-gray-900 leading-tight md:text-[2.75rem]"
                    >
                        About
                    </h2>
                    <div class="flex flex-col gap-6">
                        <p
                            class="text-lg font-light leading-relaxed text-gray-500 m-0"
                        >
                            With <strong class="font-medium text-gray-700"
                                >7+ years</strong
                            > of development experience, I've become a Technical
                            Product Expert who combines strategic thinking, user
                            research, and full-stack development to create digital
                            products that users genuinely love.
                        </p>
                        <p
                            class="text-lg font-light leading-relaxed text-gray-500 m-0"
                        >
                            My unique advantage is thinking across the full
                            product lifecycle. I can conduct user research, make
                            strategic decisions, then execute technically—all
                            without handoff delays or lost context.
                        </p>
                        <p
                            class="text-lg font-light leading-relaxed text-gray-500 m-0"
                        >
                            <strong class="font-medium text-gray-700"
                                >Products built for:</strong
                            >
                            {trustedByCompanies.join(", ")}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonial Section -->
    <section class="bg-white text-gray-800 py-20 md:py-[100px] lg:py-[120px]">
        <div class="container max-w-container mx-auto px-6">
            <div class="max-w-3xl mx-auto">
                <h2 class="text-5xl font-light tracking-tight text-center text-gray-900 leading-tight mb-12 md:text-[2.75rem]">
                    What People Say
                </h2>
                <div
                    class="bg-gray-50 rounded-lg p-8 md:p-10 border border-gray-100"
                >
                    <div class="flex items-start gap-4 mb-6">
                        <div class="flex-shrink-0">
                            <div
                                class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center"
                            >
                                <span class="text-accent-600 font-medium"
                                    >SH</span
                                >
                            </div>
                        </div>
                        <div>
                            <h4 class="font-medium text-gray-900">
                                Sarah Hibner
                            </h4>
                            <p class="text-sm text-gray-600">
                                Senior Product Designer at LeagueApps
                            </p>
                        </div>
                    </div>
                    <blockquote class="text-gray-700 leading-relaxed">
                        <p class="mb-4">
                            "I got to experience Hanif's collaborative front-end
                            engineering skills in my role as a product designer
                            on the scheduling team at LeagueApps, and he was a
                            pleasure to work with!
                        </p>
                        <p class="mb-4">
                            We worked together mostly on the tournament
                            schedules product, and as my teammate, Hanif:
                        </p>
                        <ul class="list-disc pl-6 space-y-2 mb-4">
                            <li>
                                Suggested design-to-engineering hand-off
                                improvements to help make our team workflow more
                                efficient
                            </li>
                            <li>
                                Provided great feedback when our team was
                                tightening up product requirements during story
                                time reviews
                            </li>
                            <li>
                                Asked insightful follow-up questions during
                                design reviews, in Figma files, and in Jira
                                tickets
                            </li>
                            <li>
                                Brought my Figma designs to life so we could
                                deliver value to our users in a production
                                environment!
                            </li>
                        </ul>
                        <p class="text-gray-700">
                            I'd be happy to collaborate with Hanif again and
                            can't recommend him enough to other teams looking
                            for a collaborative, thorough, and all-around
                            stellar front-end engineer."
                        </p>
                    </blockquote>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-white text-gray-800">
        <div
            class="container max-w-container mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]"
        >
            <h2
                class="text-5xl font-light tracking-tight text-center mb-[60px] text-gray-900 leading-tight md:text-[2.75rem]"
            >
                Why Work With Me
            </h2>
            <div
                class="flex flex-col gap-10 md:gap-8 lg:grid lg:grid-cols-2 lg:gap-8"
            >
                {
                    whyWorkWithMe.map((item, i) => (
                        <div
                            class={`border border-gray-200 rounded-sm p-8 bg-white md:p-10 lg:p-12 ${i === whyWorkWithMe.length - 1 ? "lg:col-span-2 lg:w-[70%] lg:mx-auto" : ""}`}
                        >
                            <h3 class="text-xl font-medium text-gray-900 m-0 mb-4 leading-snug md:text-2xl">
                                {item.title}
                            </h3>
                            <p class="text-lg font-light leading-relaxed text-gray-500 m-0 mb-6 md:text-lg">
                                {item.description}
                            </p>
                            <ul class="list-none p-0 m-0 flex flex-col gap-3">
                                {item.features.map((feature) => (
                                    <li class="text-[0.95rem] leading-relaxed text-gray-600 pl-4 relative font-normal before:content-['—'] before:absolute before:left-0 before:text-accent-600 before:font-light">
                                        {feature}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <MyProcessSection />

    <!-- FAQ Section -->
    <section
        class="bg-white text-gray-800 border-t border-gray-100 py-20 md:py-[100px] lg:py-[120px]"
    >
        <div class="container max-w-container mx-auto px-6">
            <div class="max-w-3xl mx-auto">
                <h2 class="text-5xl font-light tracking-tight text-center text-gray-900 leading-tight mb-12 md:text-[2.75rem]">
                    Frequently Asked Questions
                </h2>
                <div class="space-y-8">
                    <div class="border-b border-gray-200 pb-6">
                        <h3 class="text-xl font-medium text-gray-900 mb-3">
                            How long does a typical project take?
                        </h3>
                        <p class="text-gray-600">
                            <strong>Prototype Sprint:</strong> 2 weeks from kickoff
                            to working prototype<br />
                            <strong>MVP Development:</strong> 6-8 weeks for a market-ready
                            product<br />
                            <strong>Custom Website:</strong> 2-3 weeks for a fully
                            functional site
                        </p>
                    </div>
                    <div class="border-b border-gray-200 pb-6">
                        <h3 class="text-xl font-medium text-gray-900 mb-3">
                            What's included in the discovery call?
                        </h3>
                        <p class="text-gray-600">
                            We'll discuss your project goals, technical
                            requirements, timeline, and budget. I'll share
                            insights on the best approach and we'll determine if
                            we're a good fit to work together. No pressure, just
                            clarity on your next steps.
                        </p>
                    </div>
                    <div class="border-b border-gray-200 pb-6">
                        <h3 class="text-xl font-medium text-gray-900 mb-3">
                            Do you work with agencies or direct clients?
                        </h3>
                        <p class="text-gray-600">
                            Both! I work directly with businesses who need
                            products built, and I also partner with agencies as
                            an embedded technical expert for their client
                            projects.
                        </p>
                    </div>
                    <div class="border-b border-gray-200 pb-6">
                        <h3 class="text-xl font-medium text-gray-900 mb-3">
                            What technologies do you work with?
                        </h3>
                        <p class="text-gray-600">
                            I use modern web technologies including React,
                            Next.js, TypeScript, Node.js, Ruby on Rails, and
                            various databases. For mobile apps, I work with Expo
                            + React Native. I choose the right tools for each
                            project's specific needs.
                        </p>
                    </div>
                    <div class="border-b border-gray-200 pb-6">
                        <h3 class="text-xl font-medium text-gray-900 mb-3">
                            How involved do I need to be during the project?
                        </h3>
                        <p class="text-gray-600">
                            Your involvement varies by project type, but
                            typically includes an initial discovery session,
                            weekly check-ins, and feedback on iterations. I
                            handle the heavy lifting while keeping you informed
                            and involved in key decisions.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
