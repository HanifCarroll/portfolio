---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Home | Hanif Carroll Web Designer & Developer";
---

<BaseLayout title={pageTitle}>
    <section class="hero-section">
        <div class="container hero-container">
            <div class="img-container">
                <img
                    src="/public/img/portrait.webp"
                    alt="Portrait of Hanif Carroll, smiling."
                />
            </div>
            <div class="hero-text">
                <span class="tagline">Freelance Web Designer & Developer</span>
                <h1>Hi, Iâ€™m Hanif!</h1>
                <p>
                    I partner with small businesses, startups, and freelancers
                    to build websites and web apps that achieve your goals.
                </p>
                <div class="buttons-container">
                    <a href="#contact" class="btn">Let's Chat</a>
                    <a href="projects" class="btn btn-outline"
                        >View Featured Projects</a
                    >
                </div>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    .hero-container {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .hero-section .img-container {
        display: flex;
        justify-content: center;
        align-items: stretch;
        width: 100%;
        height: 100%;
        /* max-width: 330px; */
        margin-inline: auto;
    }

    .hero-section img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        max-width: 300px;
    }

    .hero-section .tagline {
        font-size: 12px;
        text-transform: uppercase;
        color: var(--primary-300);
    }

    .hero-section .buttons-container {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        gap: 8px;
        text-align: center;
        margin-top: 16px;
    }

    .hero-section a {
        text-decoration: none;
    }

    @media (min-width: 768px) {
        .hero-section .tagline {
            font-size: 16px;
        }
        .hero-section p {
            margin-block: 32px;
        }
        .hero-container {
            display: flex;
            flex-direction: row;
            gap: 40px;
        }
        .hero-section .img-container {
            order: 2;
            width: 100%;
            max-width: 550px;
        }
        .hero-section .hero-text {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .hero-section .buttons-container {
            flex-direction: row;
            gap: 16px;
        }
    }

    @media (min-width: 1280px) {
        .hero-section .tagline {
            font-size: 24px;
        }

        .hero-section img {
            max-width: 330px;
        }
    }
</style>
