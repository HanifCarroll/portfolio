---
import BaseLayout from "../layouts/BaseLayout.astro";
import { createPageTitle } from "../utils/siteConfig";
import CTAButton from "../components/CTAButton.astro";

const pageTitle = createPageTitle("Newsletter");
const pageDescription = "The Bootstrapped Founder's Field Guide - Weekly insights for nontechnical founders building ambitious products without burning cash.";

// Hide footer on this page
const showFooter = false;
---

<BaseLayout title={pageTitle} description={pageDescription} showFooter={showFooter}>
    <!-- Hero Section -->
    <section class="bg-white text-gray-800">
        <div class="container max-w-4xl mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]">
            <div class="text-center">
                <span class="text-[0.9rem] font-medium text-accent-600 uppercase tracking-[0.15em] mb-4 block">
                    Every Week
                </span>
                <h1 class="text-5xl font-light tracking-tight leading-tight text-gray-900 mb-8 md:text-[2.75rem]">
                    The Bootstrapped Founder's Field Guide
                </h1>
                <p class="text-xl font-light leading-relaxed text-gray-500 max-w-3xl mx-auto mb-12">
                    Practical insights for nontechnical founders who want to build products users love—without burning cash or losing their minds.
                </p>
                
                <!-- Subscription Form -->
                <div class="max-w-md mx-auto">
                    <form 
                        action="https://app.convertkit.com/forms/YOUR_FORM_ID/subscriptions" 
                        method="post"
                        class="flex flex-col sm:flex-row gap-4"
                    >
                        <input 
                            type="email" 
                            name="email_address" 
                            placeholder="Your email address" 
                            required
                            class="flex-1 px-6 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-accent-500 focus:ring-1 focus:ring-accent-500"
                        />
                        <button 
                            type="submit"
                            class="px-8 py-3 bg-accent-600 text-white font-medium rounded-lg hover:bg-accent-700 transition-colors whitespace-nowrap"
                        >
                            Subscribe
                        </button>
                    </form>
                    <p class="text-sm text-gray-500 mt-4">
                        Join 500+ founders getting actionable insights every week. Unsubscribe anytime.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- What's Inside -->
    <section class="bg-gray-50 text-gray-800 border-t border-gray-100">
        <div class="container max-w-5xl mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]">
            <h2 class="text-3xl font-light text-gray-900 mb-12 text-center tracking-tight">
                What's Inside Each Issue
            </h2>
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4 max-w-4xl mx-auto">
                <div class="text-center">
                    <div class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-600">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">1 Founder-Tested Insight</h3>
                    <p class="text-sm text-gray-600">
                        A practical product or growth lesson from real experience
                    </p>
                </div>
                
                <div class="text-center">
                    <div class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-600">
                            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">3 Hand-Picked Links</h3>
                    <p class="text-sm text-gray-600">
                        Tools, articles, and resources worth your limited time
                    </p>
                </div>
                
                <div class="text-center">
                    <div class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-600">
                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Reader Q&A</h3>
                    <p class="text-sm text-gray-600">
                        Your questions answered with actionable advice
                    </p>
                </div>
                
                <div class="text-center">
                    <div class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-600">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">5-Minute Read</h3>
                    <p class="text-sm text-gray-600">
                        Respect for your time—no fluff, just value
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Recent Issues -->
    <section class="bg-white text-gray-800 border-t border-gray-100">
        <div class="container max-w-4xl mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]">
            <h2 class="text-3xl font-light text-gray-900 mb-12 text-center tracking-tight">
                Recent Issues
            </h2>
            <div class="space-y-8 max-w-3xl mx-auto">
                <!-- Issue 1 -->
                <article class="bg-gray-50 rounded-lg p-8">
                    <div class="flex items-start justify-between mb-4">
                        <h3 class="text-xl font-medium text-gray-900">
                            Why Your MVP is Taking Too Long (And How to Fix It)
                        </h3>
                        <span class="text-sm text-gray-500 whitespace-nowrap ml-4">Issue #1</span>
                    </div>
                    <p class="text-gray-600 mb-4">
                        The hidden complexity trap that kills most MVPs before launch, plus a simple framework for cutting scope without losing value.
                    </p>
                    <a 
                        href="#" 
                        class="text-accent-600 font-medium hover:text-accent-700 transition-colors"
                    >
                        Read online →
                    </a>
                </article>
                
            </div>
            
            <div class="text-center mt-12">
                <a 
                    href="#" 
                    class="text-accent-600 font-medium hover:text-accent-700 transition-colors"
                >
                    View full archive on ConvertKit →
                </a>
            </div>
        </div>
    </section>

    <!-- Final CTA -->
    <section class="bg-gray-50 text-gray-800 border-t border-gray-100">
        <div class="container max-w-3xl mx-auto py-20 px-6 md:py-[100px] lg:py-[120px]">
            <div class="text-center">
                <h2 class="text-5xl font-light tracking-tight text-gray-900 leading-tight mb-6 md:text-[2.75rem]">
                    Ready to Build Smarter?
                </h2>
                <p class="text-lg font-light leading-relaxed text-gray-500 mb-10 max-w-2xl mx-auto">
                    Join bootstrapped founders who are turning ideas into revenue without burning cash or building the wrong thing.
                </p>
                
                <!-- Subscription Form -->
                <div class="max-w-md mx-auto">
                    <form 
                        action="https://app.convertkit.com/forms/YOUR_FORM_ID/subscriptions" 
                        method="post"
                        class="flex flex-col sm:flex-row gap-4"
                    >
                        <input 
                            type="email" 
                            name="email_address" 
                            placeholder="Your email address" 
                            required
                            class="flex-1 px-6 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-accent-500 focus:ring-1 focus:ring-accent-500"
                        />
                        <button 
                            type="submit"
                            class="px-8 py-3 bg-accent-600 text-white font-medium rounded-lg hover:bg-accent-700 transition-colors whitespace-nowrap"
                        >
                            Subscribe
                        </button>
                    </form>
                    <p class="text-sm text-gray-500 mt-4">
                        Every week. No spam. Unsubscribe anytime.
                    </p>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>