---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { createPageTitle } from "../../utils/siteConfig";

const pageTitle = createPageTitle("Services");
const pageDescription =
    "Transform your ideas into reality with custom web and mobile development. From rapid prototypes to production-ready MVPs to professional websites.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Hero Section -->
    <section class="bg-white text-gray-800 border-b border-gray-100">
        <div class="container section-padding-block">
            <div class="max-w-[800px] mx-auto text-center">
                <h1
                    class="text-6xl font-light tracking-tight leading-tight text-gray-900 mb-6"
                >
                    Your Ideas Deserve to Exist in the World
                </h1>
                <p
                    class="text-2xl font-normal text-gray-600 leading-6 max-w-[700px] mx-auto"
                >
                    I help founders and businesses transform concepts into
                    working products. Whether you need to test an idea quickly,
                    launch your startup, or establish your professional presence
                    online.
                </p>
            </div>
        </div>
    </section>

    <!-- Services Overview -->
    <section class="bg-gray-50">
        <div class="container section-padding-block">
            <div
                class="grid gap-8 max-w-[1200px] mx-auto md:grid-cols-3 md:items-stretch"
            >
                <!-- Prototype Sprint -->
                <div
                    class="bg-white rounded-sm p-10 border border-gray-200 shadow-sm transition-all duration-200 hover:-translate-y-0.5 hover:shadow-md"
                >
                    <div class="mb-6 text-accent-600 h-12">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="48"
                            height="48"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="w-12 h-12"
                        >
                            <path
                                d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"
                            ></path>
                            <path
                                d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"
                            ></path>
                            <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"
                            ></path>
                            <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"
                            ></path>
                        </svg>
                    </div>
                    <h2
                        class="text-4xl font-medium text-gray-900 mb-2 md:min-h-[5rem]"
                    >
                        Discovery & Prototype Sprint
                    </h2>
                    <p
                        class="text-xl text-accent-600 font-normal mb-6 min-h-[2rem]"
                    >
                        Test your idea before you invest
                    </p>
                    <div
                        class="text-gray-600 leading-relaxed mb-6 flex-1 flex flex-col"
                    >
                        <p>
                            Transform your concept into a working prototype in
                            just 2 weeks. Perfect when you need to:
                        </p>
                        <ul class="mt-3 pl-6">
                            <li class="mb-2">
                                Show something real to investors or stakeholders
                            </li>
                            <li class="mb-2">
                                Test your assumptions with actual users
                            </li>
                            <li class="mb-2">
                                Get clarity on technical feasibility
                            </li>
                            <li class="mb-2">
                                Make confident decisions about next steps
                            </li>
                        </ul>
                    </div>
                    <div class="bg-accent-50 p-4 px-5 rounded-lg mb-6">
                        <p class="text-lg text-gray-700 m-0">
                            <strong>You'll walk away with:</strong> A functional
                            coded prototype you can share and test, plus a clear
                            roadmap for moving forward.
                        </p>
                    </div>
                    <a
                        href="/services/prototypes"
                        class="inline-flex items-center text-accent-600 font-medium text-lg transition-all duration-200 hover:text-accent-700 hover:translate-x-0.5"
                    >
                        Learn how we'll bring your idea to life →
                    </a>
                </div>

                <!-- MVP Development -->
                <div
                    class="bg-white border border-accent-300 rounded-sm p-10 shadow-md transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg relative"
                >
                    <div class="mb-6 text-accent-600 h-12">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="48"
                            height="48"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="w-12 h-12"
                        >
                            <rect
                                width="14"
                                height="20"
                                x="5"
                                y="2"
                                rx="2"
                                ry="2"></rect>
                            <path d="M12 18h.01"></path>
                        </svg>
                    </div>
                    <h2
                        class="text-4xl font-medium text-gray-900 mb-2 md:min-h-[5rem]"
                    >
                        MVP Development
                    </h2>
                    <p
                        class="text-xl text-accent-600 font-normal mb-6 min-h-[2rem]"
                    >
                        Launch your startup with confidence
                    </p>
                    <div
                        class="text-gray-600 leading-relaxed mb-6 flex-1 flex flex-col"
                    >
                        <p>
                            Go from validated concept to market-ready product.
                            Ideal when you're ready to:
                        </p>
                        <ul class="mt-3 pl-6">
                            <li class="mb-2">
                                Launch your startup and acquire real customers
                            </li>
                            <li class="mb-2">
                                Build the core features that matter most
                            </li>
                            <li class="mb-2">
                                Get to market quickly without sacrificing
                                quality
                            </li>
                            <li class="mb-2">
                                Start generating revenue or user growth
                            </li>
                        </ul>
                    </div>
                    <div class="bg-accent-50 p-4 px-5 rounded-lg mb-6">
                        <p class="text-lg text-gray-700 m-0">
                            <strong>You'll launch with:</strong> A production-ready
                            web or mobile app that's built to scale, with everything
                            needed to onboard your first users.
                        </p>
                    </div>
                    <a
                        href="/services/mvp-development"
                        class="inline-flex items-center text-accent-600 font-medium text-lg transition-all duration-200 hover:text-accent-700 hover:translate-x-0.5"
                    >
                        See how we'll build your MVP →
                    </a>
                </div>

                <!-- Custom Websites -->
                <div
                    class="bg-white rounded-sm p-10 border border-gray-200 shadow-sm transition-all duration-200 hover:-translate-y-0.5 hover:shadow-md"
                >
                    <div class="mb-6 text-accent-600 h-12">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="48"
                            height="48"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="w-12 h-12"
                        >
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" x2="22" y1="12" y2="12"></line>
                            <path
                                d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
                            ></path>
                        </svg>
                    </div>
                    <h2
                        class="text-4xl font-medium text-gray-900 mb-2 md:min-h-[5rem]"
                    >
                        Custom Business Websites
                    </h2>
                    <p
                        class="text-xl text-accent-600 font-normal mb-6 min-h-[2rem]"
                    >
                        Stand out with a site that converts
                    </p>
                    <div
                        class="text-gray-600 leading-relaxed mb-6 flex-1 flex flex-col"
                    >
                        <p>
                            Get a professional website that works as hard as you
                            do. Great for businesses that want to:
                        </p>
                        <ul class="mt-3 pl-6">
                            <li class="mb-2">
                                Convert more visitors into customers
                            </li>
                            <li class="mb-2">
                                Look professional and trustworthy online
                            </li>
                            <li class="mb-2">
                                Stand out from template-using competitors
                            </li>
                            <li class="mb-2">
                                Have full control over their web presence
                            </li>
                        </ul>
                    </div>
                    <div class="bg-accent-50 p-4 px-5 rounded-lg mb-6">
                        <p class="text-lg text-gray-700 m-0">
                            <strong>You'll get:</strong> A custom-coded website that
                            loads fast, looks great on all devices, and comes with
                            everything you need to manage it.
                        </p>
                    </div>
                    <a
                        href="/services/websites"
                        class="inline-flex items-center text-accent-600 font-medium text-lg transition-all duration-200 hover:text-accent-700 hover:translate-x-0.5"
                    >
                        Explore website options →
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- How I Work Section -->
    <section class="bg-white border-t border-gray-100">
        <div class="container section-padding-block">
            <h2 class="text-5xl font-light text-center text-gray-900 mb-4">
                A Process Built on Clarity
            </h2>
            <div>
                <p
                    class="text-xl text-gray-600 text-center max-w-[700px] mx-auto mb-12 leading-6"
                >
                    Great products start with clear communication. My superpower
                    is translating your vision into concrete requirements and
                    beautiful, functional products.
                </p>
                <div
                    class="grid gap-8 max-w-[1000px] mx-auto md:grid-cols-2 lg:grid-cols-4"
                >
                    <div class="text-center p-6">
                        <div
                            class="inline-flex items-center justify-center w-12 h-12 bg-accent-100 text-accent-700 rounded-full text-2xl font-semibold mb-4"
                        >
                            1
                        </div>
                        <h3 class="text-3xl font-medium text-gray-900 mb-3">
                            We Talk
                        </h3>
                        <p class="text-lg text-gray-600 leading-6">
                            I listen deeply to understand your goals, your
                            users, and what success looks like for you.
                        </p>
                    </div>
                    <div class="text-center p-6">
                        <div
                            class="inline-flex items-center justify-center w-12 h-12 bg-accent-100 text-accent-700 rounded-full text-2xl font-semibold mb-4"
                        >
                            2
                        </div>
                        <h3 class="text-3xl font-medium text-gray-900 mb-3">
                            I Clarify
                        </h3>
                        <p class="text-lg text-gray-600 leading-6">
                            I transform vague ideas into clear requirements and
                            a concrete plan you can understand.
                        </p>
                    </div>
                    <div class="text-center p-6">
                        <div
                            class="inline-flex items-center justify-center w-12 h-12 bg-accent-100 text-accent-700 rounded-full text-2xl font-semibold mb-4"
                        >
                            3
                        </div>
                        <h3 class="text-3xl font-medium text-gray-900 mb-3">
                            We Build
                        </h3>
                        <p class="text-lg text-gray-600 leading-6">
                            You stay involved as I rapidly develop your product,
                            with regular check-ins and updates.
                        </p>
                    </div>
                    <div class="text-center p-6">
                        <div
                            class="inline-flex items-center justify-center w-12 h-12 bg-accent-100 text-accent-700 rounded-full text-2xl font-semibold mb-4"
                        >
                            4
                        </div>
                        <h3 class="text-3xl font-medium text-gray-900 mb-3">
                            You Launch
                        </h3>
                        <p class="text-lg text-gray-600 leading-6">
                            You get a polished product that's ready for real
                            users, with confidence in what comes next.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gray-50 border-t border-gray-100">
        <div class="container section-padding-block">
            <div class="max-w-[700px] mx-auto text-center">
                <h2 class="text-5xl font-light text-gray-900 mb-4">
                    Ready to Build Something Great?
                </h2>
                <p class="text-lg text-gray-600 leading-relaxed mb-8">
                    Let's have a conversation about your project. We'll discuss
                    your goals, explore the best approach, and see if we're a
                    good fit to work together.
                </p>
                <div class="flex flex-col items-center gap-4">
                    <a
                        href="https://cal.com/hanifcarroll/discovery"
                        class="inline-flex items-center justify-center py-[14px] px-[28px] bg-accent-600 text-white border-2 border-accent-600 rounded-sm font-medium text-lg transition-all duration-200 hover:bg-accent-700 hover:border-accent-700 hover:-translate-y-0.5"
                    >
                        Schedule Your Free Discovery Call
                    </a>
                    <p class="text-lg-small text-gray-500 m-0">
                        30 minutes • No pressure • Get clarity on your next
                        steps
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Optional: Add-on Services -->
    <section class="bg-white border-t border-gray-100 py-8">
        <div class="container">
            <div class="max-w-[800px] mx-auto text-center">
                <h3 class="text-2xl font-normal text-gray-700 mb-6">
                    Also Available:
                </h3>
                <div class="grid gap-8 mx-auto md:grid-cols-2 md:max-w-[600px]">
                    <div class="p-4">
                        <h4 class="text-xl font-medium text-gray-900 mb-2">
                            UX Consulting
                        </h4>
                        <p class="text-lg-small text-gray-600 m-0">
                            Improve your existing product's user experience
                        </p>
                    </div>
                    <div class="p-4">
                        <h4 class="text-xl font-medium text-gray-900 mb-2">
                            Technical Advisory
                        </h4>
                        <p class="text-lg-small text-gray-600 m-0">
                            Ongoing guidance as your technical partner
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
